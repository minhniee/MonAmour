@model MonAmour.ViewModels.BlogDetailViewModel
@{
    ViewData["Title"] = "Chi tiết bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết bài viết</h1>
        <div>
            <a asp-action="EditBlog" asp-route-id="@Model.BlogId" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
                <i class="fas fa-edit fa-sm text-white-50"></i> Chỉnh sửa
            </a>
            <a asp-action="Blogs" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Blog Detail -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin bài viết</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="mb-3">@Model.Title</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Excerpt))
                    {
                        <div class="alert alert-light">
                            <strong>Tóm tắt:</strong> @Model.Excerpt
                        </div>
                    }

                    <div class="mb-3">
                        <strong>Nội dung:</strong>
                        <div class="mt-2 p-3 border rounded">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="mb-3">
                            <strong>Tags:</strong>
                            <div class="mt-1">
                                @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge bg-primary me-1">@tag.Trim()</span>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.FeaturedImage))
                    {
                        <div class="mb-3">
                            <strong>Hình ảnh đại diện:</strong>
                            <div class="mt-2">
                                <img src="@Model.FeaturedImage" alt="@Model.Title" class="img-fluid rounded" />
                            </div>
                        </div>
                    }

                    <div class="card">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết</h6>
                        </div>
                        <div class="card-body">
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Tác giả:</strong></td>
                                    <td>@(Model.AuthorName ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Danh mục:</strong></td>
                                    <td>@(Model.CategoryName ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo:</strong></td>
                                    <td>@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày cập nhật:</strong></td>
                                    <td>@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày xuất bản:</strong></td>
                                    <td>@(Model.PublishedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Lượt xem:</strong></td>
                                    <td><span class="badge bg-info">@(Model.ViewCount ?? 0)</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Thời gian đọc:</strong></td>
                                    <td>@(Model.ReadTime ?? 0) phút</td>
                                </tr>
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td>
                                        @if (Model.IsPublished == true)
                                        {
                                            <span class="badge bg-success">Đã xuất bản</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Chưa xuất bản</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Nổi bật:</strong></td>
                                    <td>
                                        @if (Model.IsFeatured == true)
                                        {
                                            <span class="badge bg-primary">Nổi bật</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">Thường</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    @if (Model.Comments.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bình luận (@Model.Comments.Count)</h6>
            </div>
            <div class="card-body">
                @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="card-title mb-1">
                                        @(comment.AuthorName ?? "Ẩn danh")
                                        @if (comment.User != null)
                                        {
                                            <small class="text-muted">(@comment.User.Name)</small>
                                        }
                                    </h6>
                                    <small class="text-muted">
                                        @(comment.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                                        @if (comment.IsApproved == true)
                                        {
                                            <span class="badge bg-success ms-2">Đã duyệt</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning ms-2">Chờ duyệt</span>
                                        }
                                    </small>
                                </div>
                            </div>
                            <p class="card-text">@comment.Content</p>
                            @if (!string.IsNullOrEmpty(comment.AuthorEmail))
                            {
                                <small class="text-muted">Email: @comment.AuthorEmail</small>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
