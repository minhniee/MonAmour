@model List<MonAmour.ViewModels.BlogCategoryListViewModel>
@{
    ViewData["Title"] = "Quản lý danh mục blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.AntiForgeryToken()

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý danh mục blog</h1>
        <a asp-action="CreateCategory" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Tạo danh mục mới
        </a>
    </div>

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tìm kiếm danh mục</h6>
        </div>
        <div class="card-body">
            <form id="searchForm" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Từ khóa tìm kiếm</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Nhập tên, mô tả hoặc slug...">
                </div>
                <div class="col-md-3">
                    <label for="isActive" class="form-label">Trạng thái</label>
                    <select class="form-select" id="isActive" name="isActive">
                        <option value="">Tất cả</option>
                        <option value="true">Hoạt động</option>
                        <option value="false">Không hoạt động</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="button" class="btn btn-primary me-2" onclick="searchCategories()">
                        <i class="fas fa-search"></i> Tìm kiếm
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="clearSearch()">
                        <i class="fas fa-times"></i> Xóa bộ lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Categories List -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách danh mục</h6>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshCategories()">
                    <i class="fas fa-sync-alt"></i> Làm mới
                </button>
            </div>
        </div>
        <div class="card-body" id="categoryListContainer">
            @await Html.PartialAsync("_CategoryListPartial", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#categoryTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "pageLength": 25,
                "order": [[5, "desc"]]
            });
        });

        function refreshCategories() {
            location.reload();
        }

        function searchCategories() {
            var searchTerm = $('#searchTerm').val();
            var isActive = $('#isActive').val();
            
            // Show loading
            $('#categoryListContainer').html('<div class="text-center py-4"><i class="fas fa-spinner fa-spin fa-2x"></i><p class="mt-2">Đang tìm kiếm...</p></div>');
            
            $.ajax({
                url: '@Url.Action("SearchCategories", "BlogManagement")',
                type: 'POST',
                data: {
                    searchTerm: searchTerm,
                    isActive: isActive === '' ? null : isActive === 'true',
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(result) {
                    $('#categoryListContainer').html(result);
                    // Re-initialize DataTable for the new content
                    $('#categoryTable').DataTable({
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                        },
                        "pageLength": 25,
                        "order": [[5, "desc"]]
                    });
                },
                error: function() {
                    $('#categoryListContainer').html('<div class="alert alert-danger">Có lỗi xảy ra khi tìm kiếm danh mục</div>');
                }
            });
        }

        function clearSearch() {
            $('#searchTerm').val('');
            $('#isActive').val('');
            refreshCategories();
        }

        // Search on Enter key press
        $('#searchTerm').on('keypress', function(e) {
            if (e.which === 13) {
                searchCategories();
            }
        });

        function toggleCategoryStatus(categoryId) {
            if (confirm('Bạn có chắc chắn muốn thay đổi trạng thái danh mục này?')) {
                $.ajax({
                    url: '@Url.Action("ToggleCategoryStatus", "BlogManagement")',
                    type: 'POST',
                    data: {
                        id: categoryId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        if (result && result.success) {
                            showAlert('success', result.message);
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            showAlert('error', result && result.message ? result.message : 'Có lỗi xảy ra khi cập nhật trạng thái danh mục');
                        }
                    },
                    error: function() {
                        showAlert('error', 'Có lỗi xảy ra khi cập nhật trạng thái danh mục');
                    }
                });
            }
        }

        function deleteCategory(categoryId) {
            if (confirm('Bạn có chắc chắn muốn xóa danh mục này? Hành động này không thể hoàn tác!')) {
                $.ajax({
                    url: '@Url.Action("DeleteCategory", "BlogManagement")',
                    type: 'POST',
                    data: {
                        id: categoryId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(result) {
                        if (result && result.success) {
                            showAlert('success', result.message);
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            showAlert('error', result && result.message ? result.message : 'Có lỗi xảy ra khi xóa danh mục');
                        }
                    },
                    error: function() {
                        showAlert('error', 'Có lỗi xảy ra khi xóa danh mục');
                    }
                });
            }
        }

        function showAlert(type, message) {
            var alertClass, iconClass;
            
            switch(type) {
                case 'success':
                    alertClass = 'alert-success';
                    iconClass = 'check-circle';
                    break;
                case 'error':
                    alertClass = 'alert-danger';
                    iconClass = 'exclamation-circle';
                    break;
                default:
                    alertClass = 'alert-secondary';
                    iconClass = 'info-circle';
            }
            
            var alertHtml = '<div class="alert ' + alertClass + ' alert-dismissible fade show" role="alert">' +
                '<i class="fas fa-' + iconClass + ' me-2"></i>' +
                message +
                '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                '</div>';
            
            // Remove existing alerts
            $('.alert').remove();
            
            // Add new alert
            $('.container-fluid').prepend(alertHtml);
            
            // Auto-hide after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 5000);
        }
    </script>
}
