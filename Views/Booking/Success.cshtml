@model MonAmour.Models.Booking
@{
    ViewData["Title"] = "Đặt lịch thành công - MonAmour";
}

<div class="min-h-screen bg-beige">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto text-center">
            <!-- Success Icon -->
            <div class="mb-8">
                <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h1 class="font-prata text-4xl text-wine-red mb-4">Đặt lịch thành công!</h1>
                <p class="font-noto-serif text-lg text-gray-700">Cảm ơn bạn đã tin tưởng MonAmour</p>
            </div>

            <!-- Booking Details Card -->
            <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
                <h2 class="font-prata text-2xl text-wine-red mb-6">Thông tin đặt lịch</h2>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-center space-x-4 mb-6">
                        @if (Model.Concept?.ConceptImgs?.Any() == true)
                        {
                            <img src="@Model.Concept.ConceptImgs.First().ImgUrl" alt="@Model.Concept.Name" 
                                 class="w-24 h-24 object-cover rounded-lg">
                        }
                        <div class="text-left">
                            <h3 class="font-prata text-xl text-wine-red">@Model.Concept?.Name</h3>
                            <p class="font-noto-serif text-gray-600">@Model.Concept?.Category?.Name</p>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="bg-beige/30 rounded-lg p-4">
                            <div class="flex items-center space-x-3">
                                <svg class="w-6 h-6 text-wine-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <div>
                                    <p class="font-noto-serif text-sm text-gray-600">Ngày</p>
                                    <p class="font-prata text-lg text-wine-red">@Model.BookingDate?.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-beige/30 rounded-lg p-4">
                            <div class="flex items-center space-x-3">
                                <svg class="w-6 h-6 text-wine-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div>
                                    <p class="font-noto-serif text-sm text-gray-600">Giờ</p>
                                    <p class="font-prata text-lg text-wine-red">@Model.BookingTime?.ToString("HH:mm")</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-beige/30 rounded-lg p-4">
                            <div class="flex items-center space-x-3">
                                <svg class="w-6 h-6 text-wine-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <div>
                                    <p class="font-noto-serif text-sm text-gray-600">Địa điểm</p>
                                    <p class="font-prata text-lg text-wine-red">@Model.Concept?.Location?.Name</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="bg-beige/30 rounded-lg p-4">
                            <div class="flex items-center space-x-3">
                                <svg class="w-6 h-6 text-wine-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div>
                                    <p class="font-noto-serif text-sm text-gray-600">Trạng thái</p>
                                    <p class="font-prata text-lg text-green-600">Đã xác nhận</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="border-t pt-4">
                        <div class="flex justify-between items-center">
                            <span class="font-prata text-xl text-wine-red">Tổng cộng:</span>
                            <span class="font-prata text-2xl font-bold text-wine-red">@String.Format("{0:N0}₫", Model.TotalPrice)</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Important Notes -->
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
                <div class="flex items-start space-x-3">
                    <svg class="w-6 h-6 text-yellow-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    <div class="text-left">
                        <h4 class="font-prata text-yellow-800 mb-2">Lưu ý quan trọng</h4>
                        <ul class="font-noto-serif text-sm text-yellow-700 space-y-1">
                            <li>• Vui lòng đến đúng giờ đã đặt lịch</li>
                            <li>• Nếu cần thay đổi lịch, vui lòng liên hệ trước 24h</li>
                            <li>• Bạn có thể xem lại lịch đặt trong mục "Lịch đặt của tôi"</li>
                            <li>• Chúng tôi sẽ gửi email xác nhận đến địa chỉ email của bạn</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="@Url.Action("OrderHistory", "Profile")"
                   class="bg-wine-red text-beige px-8 py-3 rounded-lg font-prata text-lg hover:bg-wine-red/90 transition-colors duration-200 shadow-lg hover:shadow-xl">
                    Xem lịch đặt của tôi
                </a>
                <a href="@Url.Action("ListConcept", "Concept")" 
                   class="bg-gray-500 text-white px-8 py-3 rounded-lg font-prata text-lg hover:bg-gray-600 transition-colors duration-200 shadow-lg hover:shadow-xl">
                    Xem thêm dịch vụ
                </a>
            </div>
        </div>
    </div>
</div>
