@model MonAmour.Models.Booking
@{
    ViewData["Title"] = "Thanh toán - MonAmour";
}

<div class="min-h-screen bg-beige">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="font-prata text-4xl text-wine-red mb-4">Thanh toán</h1>
                <p class="font-noto-serif text-lg text-gray-700">Hoàn tất thanh toán để xác nhận đặt lịch</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Booking Details -->
                <div class="bg-white rounded-2xl shadow-lg p-6">
                    <h2 class="font-prata text-2xl text-wine-red mb-6">Chi tiết đặt lịch</h2>
                    
                    <div class="space-y-4">
                        <div class="flex items-center space-x-4">
                            @if (Model.Concept?.ConceptImgs?.Any() == true)
                            {
                                <img src="@Model.Concept.ConceptImgs.First().ImgUrl" alt="@Model.Concept.Name" 
                                     class="w-20 h-20 object-cover rounded-lg">
                            }
                            <div>
                                <h3 class="font-prata text-xl text-wine-red">@Model.Concept?.Name</h3>
                                <p class="font-noto-serif text-gray-600">@Model.Concept?.Category?.Name</p>
                            </div>
                        </div>
                        
                        <div class="border-t pt-4">
                            <div class="flex justify-between items-center mb-2">
                                <span class="font-noto-serif text-gray-600">Ngày:</span>
                                <span class="font-prata text-wine-red">@Model.BookingDate?.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="font-noto-serif text-gray-600">Giờ:</span>
                                <span class="font-prata text-wine-red">@Model.BookingTime?.ToString("HH:mm")</span>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="font-noto-serif text-gray-600">Địa điểm:</span>
                                <span class="font-prata text-wine-red">@Model.Concept?.Location?.Name</span>
                            </div>
                            <div class="flex justify-between items-center border-t pt-2">
                                <span class="font-prata text-xl text-wine-red">Tổng cộng:</span>
                                <span class="font-prata text-2xl font-bold text-wine-red">@String.Format("{0:N0}₫", Model.TotalPrice)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Instructions -->
                <div class="bg-white rounded-2xl shadow-lg p-6">
                    <h2 class="font-prata text-2xl text-wine-red mb-6">Hướng dẫn thanh toán</h2>
                    
                    <div class="space-y-6">
                        <div class="bg-beige/50 rounded-lg p-4">
                            <h3 class="font-prata text-lg text-wine-red mb-3">Thông tin chuyển khoản</h3>
                            <div class="space-y-2">
                                <div class="flex justify-between">
                                    <span class="font-noto-serif text-gray-600">Số tài khoản:</span>
                                    <span class="font-prata text-wine-red font-mono">0000291930123</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="font-noto-serif text-gray-600">Ngân hàng:</span>
                                    <span class="font-prata text-wine-red">MB Bank</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="font-noto-serif text-gray-600">Chủ tài khoản:</span>
                                    <span class="font-prata text-wine-red">MON AMOUR</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-wine-red/10 rounded-lg p-4">
                            <h3 class="font-prata text-lg text-wine-red mb-3">Quét mã QR để thanh toán</h3>
                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(ViewBag.QRCodeUrl))
                                {
                                    <div class="bg-white rounded-lg p-4 border-2 border-dashed border-wine-red/30 mb-3">
                                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Uri.EscapeDataString(ViewBag.QRCodeUrl)" 
                                             alt="QR Code" class="mx-auto max-w-full h-auto" style="max-height: 200px;">
                                    </div>
                                    <p class="font-noto-serif text-sm text-gray-600 mb-2">
                                        Quét mã QR bằng ứng dụng ngân hàng để thanh toán
                                    </p>
                                }
                                else
                                {
                                    <div class="bg-white rounded-lg p-3 border-2 border-dashed border-wine-red/30">
                                        <p class="font-mono text-wine-red text-center text-lg font-bold" id="paymentReference">
                                            Đang tải...
                                        </p>
                                    </div>
                                    <p class="font-noto-serif text-sm text-gray-600 mt-2 text-center">
                                        Vui lòng chuyển khoản chính xác nội dung này
                                    </p>
                                }
                            </div>
                        </div>

                        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                            <div class="flex items-start space-x-3">
                                <svg class="w-5 h-5 text-yellow-600 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                                <div>
                                    <h4 class="font-prata text-yellow-800">Lưu ý quan trọng</h4>
                                    <ul class="font-noto-serif text-sm text-yellow-700 mt-1 space-y-1">
                                        <li>• Quét mã QR bằng ứng dụng ngân hàng để thanh toán</li>
                                        <li>• Số tiền: <strong>@String.Format("{0:N0}₫", Model.TotalPrice)</strong></li>
                                        <li>• Sau khi chuyển khoản, nhấn "Kiểm tra thanh toán"</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="space-y-3">
                            <button id="checkPaymentBtn" 
                                    class="w-full bg-wine-red text-beige py-4 rounded-lg font-prata text-lg hover:bg-wine-red/90 transition-colors duration-200 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed">
                                <span id="checkBtnText">Kiểm tra thanh toán</span>
                                <span id="checkBtnLoading" class="hidden">
                                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    Đang kiểm tra...
                                </span>
                            </button>
                            
                            <button id="autoCheckBtn" 
                                    class="w-full bg-gray-500 text-white py-3 rounded-lg font-prata hover:bg-gray-600 transition-colors duration-200">
                                Tự động kiểm tra (30s)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let autoCheckInterval;
    let autoCheckCountdown = 30;
    
    // Set payment reference when page loads (fallback for manual transfer)
    document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM Content Loaded - Payment page');
        console.log('Booking ID from model:', @Model.BookingId);
        console.log('Payment Reference:', '@ViewBag.PaymentReference');
        
        const paymentReference = '@ViewBag.PaymentReference';
        const paymentRefElement = document.getElementById('paymentReference');
        if (paymentRefElement && paymentReference) {
            paymentRefElement.textContent = paymentReference;
        }
        
        // Test if button exists
        const checkBtn = document.getElementById('checkPaymentBtn');
        console.log('Check payment button found:', checkBtn !== null);
        if (checkBtn) {
            console.log('Button is ready for click events');
        }
    });
    
    // Manual check payment
    document.getElementById('checkPaymentBtn').addEventListener('click', async function() {
        console.log('Check payment button clicked!');
        console.log('Booking ID:', @Model.BookingId);
        
        const checkBtn = document.getElementById('checkPaymentBtn');
        const checkBtnText = document.getElementById('checkBtnText');
        const checkBtnLoading = document.getElementById('checkBtnLoading');
        
        checkBtn.disabled = true;
        checkBtnText.classList.add('hidden');
        checkBtnLoading.classList.remove('hidden');
        
        try {
            const url = '@Url.Action("CheckPayment", "Booking", new { bookingId = Model.BookingId })';
            console.log('Fetching URL:', url);
            
            const response = await fetch(url);
            console.log('Response status:', response.status);
            console.log('Response ok:', response.ok);
            
            // Check if response is ok before parsing JSON
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Response not ok:', errorText);
                alert('Lỗi server: ' + response.status + ' - ' + errorText);
                return;
            }
            
            const result = await response.json();
            console.log('Response result:', result);
            
            if (result.success) {
                if (result.redirectUrl) {
                    console.log('Redirecting to:', result.redirectUrl);
                    window.location.href = result.redirectUrl;
                } else {
                    alert(result.message || 'Thanh toán đã được xác nhận!');
                }
            } else {
                console.log('Payment check failed:', result.message);
                alert(result.message || 'Chưa có giao dịch nào phù hợp');
            }
        } catch (error) {
            console.error('Error details:', error);
            console.error('Error message:', error.message);
            console.error('Error stack:', error.stack);
            alert('Có lỗi xảy ra khi kiểm tra thanh toán: ' + error.message);
        } finally {
            checkBtn.disabled = false;
            checkBtnText.classList.remove('hidden');
            checkBtnLoading.classList.add('hidden');
        }
    });
    
    // Auto check payment
    document.getElementById('autoCheckBtn').addEventListener('click', function() {
        if (autoCheckInterval) {
            clearInterval(autoCheckInterval);
        }
        
        startAutoCheck();
    });
    
    function startAutoCheck() {
        const autoCheckBtn = document.getElementById('autoCheckBtn');
        autoCheckCountdown = 30;
        
        autoCheckInterval = setInterval(async function() {
            autoCheckCountdown--;
            autoCheckBtn.textContent = `Tự động kiểm tra (${autoCheckCountdown}s)`;
            
            if (autoCheckCountdown <= 0) {
                clearInterval(autoCheckInterval);
                autoCheckBtn.textContent = 'Tự động kiểm tra (30s)';
                
                // Check payment
                try {
                    const response = await fetch('@Url.Action("CheckPayment", "Booking", new { bookingId = Model.BookingId })');
                    const result = await response.json();
                    
                    if (result.success && result.redirectUrl) {
                        window.location.href = result.redirectUrl;
                    } else if (result.success) {
                        // Continue auto checking
                        startAutoCheck();
                    }
                } catch (error) {
                    console.error('Error:', error);
                    startAutoCheck();
                }
            }
        }, 1000);
    }
    
    // Start auto check on page load
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(startAutoCheck, 5000); // Start after 5 seconds
    });
</script>
