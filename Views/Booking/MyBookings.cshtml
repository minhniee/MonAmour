@model List<MonAmour.Models.Booking>
@{
    ViewData["Title"] = "Lịch đặt của tôi - MonAmour";
}

<div class="min-h-screen bg-beige">
    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="font-prata text-4xl text-wine-red mb-4">Lịch đặt của tôi</h1>
            <p class="font-noto-serif text-lg text-gray-700">Quản lý và theo dõi các lịch đặt của bạn</p>
        </div>

        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="w-32 h-32 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="font-prata text-2xl text-gray-600 mb-4">Chưa có lịch đặt nào</h3>
                <p class="font-noto-serif text-gray-500 mb-8">Hãy khám phá các dịch vụ của chúng tôi và đặt lịch ngay!</p>
                <a href="@Url.Action("ListConcept", "Concept")" 
                   class="bg-wine-red text-beige px-8 py-3 rounded-lg font-prata text-lg hover:bg-wine-red/90 transition-colors duration-200 shadow-lg hover:shadow-xl">
                    Khám phá dịch vụ
                </a>
            </div>
        }
        else
        {
            <!-- Bookings List -->
            <div class="space-y-6">
                @foreach (var booking in Model)
                {
                    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
                        <div class="p-6">
                            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                                <!-- Booking Info -->
                                <div class="flex-1">
                                    <div class="flex items-start space-x-4 mb-4">
                                        @if (booking.Concept?.ConceptImgs?.Any() == true)
                                        {
                                            <img src="@booking.Concept.ConceptImgs.First().ImgUrl" 
                                                 alt="@booking.Concept.Name" 
                                                 class="w-20 h-20 object-cover rounded-lg">
                                        }
                                        <div class="flex-1">
                                            <h3 class="font-prata text-xl text-wine-red mb-2">@booking.Concept?.Name</h3>
                                            <p class="font-noto-serif text-gray-600 mb-2">@booking.Concept?.Category?.Name</p>
                                            <div class="flex flex-wrap gap-4 text-sm">
                                                <div class="flex items-center space-x-2">
                                                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                    </svg>
                                                    <span class="text-gray-600">@booking.BookingDate?.ToString("dd/MM/yyyy")</span>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    <span class="text-gray-600">@booking.BookingTime?.ToString("HH:mm")</span>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                    </svg>
                                                    <span class="text-gray-600">@booking.Concept?.Location?.Name</span>
                                                </div>
                                                @if (!string.IsNullOrWhiteSpace(booking.Concept?.Location?.GgmapLink))
                                                {
                                                    <a href="@booking.Concept.Location.GgmapLink" target="_blank" rel="noopener"
                                                       class="inline-flex items-center text-wine-red hover:underline text-sm">
                                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                                        </svg>
                                                        Xem bản đồ
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-4">
                                            <!-- Status Badge -->
                                            @{
                                                string statusClass = "";
                                                string statusText = "";
                                                switch (booking.Status?.ToLower())
                                                {
                                                    case "pending":
                                                        statusClass = "bg-yellow-100 text-yellow-800";
                                                        statusText = "Chờ xác nhận";
                                                        break;
                                                    case "confirmed":
                                                        statusClass = "bg-green-100 text-green-800";
                                                        statusText = "Đã xác nhận";
                                                        break;
                                                    case "cancelled":
                                                        statusClass = "bg-red-100 text-red-800";
                                                        statusText = "Đã hủy";
                                                        break;
                                                    default:
                                                        statusClass = "bg-gray-100 text-gray-800";
                                                        statusText = booking.Status ?? "Không xác định";
                                                        break;
                                                }
                                            }
                                            <span class="px-3 py-1 rounded-full text-sm font-medium @statusClass">
                                                @statusText
                                            </span>
                                            
                                            <!-- Payment Status -->
                                            @{
                                                string paymentClass = "";
                                                string paymentText = "";
                                                switch (booking.PaymentStatus?.ToLower())
                                                {
                                                    case "paid":
                                                        paymentClass = "bg-green-100 text-green-800";
                                                        paymentText = "Đã thanh toán";
                                                        break;
                                                    case "unpaid":
                                                        paymentClass = "bg-yellow-100 text-yellow-800";
                                                        paymentText = "Chưa thanh toán";
                                                        break;
                                                    default:
                                                        paymentClass = "bg-gray-100 text-gray-800";
                                                        paymentText = booking.PaymentStatus ?? "Không xác định";
                                                        break;
                                                }
                                            }
                                            <span class="px-3 py-1 rounded-full text-sm font-medium @paymentClass">
                                                @paymentText
                                            </span>
                                        </div>
                                        
                                        <div class="text-right">
                                            <div class="font-prata text-2xl font-bold text-wine-red">
                                                @String.Format("{0:N0}₫", booking.TotalPrice)
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                Đặt lúc: @booking.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="flex flex-col sm:flex-row gap-2 mt-4 lg:mt-0 lg:ml-6">
                                    @if (booking.Status?.ToLower() == "pending" && booking.PaymentStatus?.ToLower() == "unpaid")
                                    {
                                        <a href="@Url.Action("Payment", "Booking", new { bookingId = booking.BookingId })" 
                                           class="bg-wine-red text-beige px-4 py-2 rounded-lg font-prata text-sm hover:bg-wine-red/90 transition-colors duration-200 text-center">
                                            Thanh toán
                                        </a>
                                    }
                                    
                                    
                                    <a href="@Url.Action("ConceptDetail", "Concept", new { id = booking.ConceptId })" 
                                       class="bg-beige text-wine-red border border-wine-red px-4 py-2 rounded-lg font-prata text-sm hover:bg-wine-red hover:text-beige transition-colors duration-200 text-center">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

