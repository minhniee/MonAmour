@model MonAmour.ViewModels.ProductCategoryViewModel
@{
    ViewData["Title"] = "Tạo Danh mục mới";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tạo Danh mục mới</h1>
        <a href="@Url.Action("ProductCategories", "Admin")" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Danh mục</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCategory" method="post" id="createCategoryForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="form-text text-muted">Tên danh mục sẽ hiển thị cho khách hàng</small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Tạo danh mục
                            </button>
                            <a href="@Url.Action("ProductCategories", "Admin")" class="btn btn-secondary ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form validation
            $('#createCategoryForm').validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    }
                },
                messages: {
                    Name: {
                        required: "Vui lòng nhập tên danh mục",
                        minlength: "Tên danh mục phải có ít nhất 2 ký tự",
                        maxlength: "Tên danh mục không được vượt quá 100 ký tự"
                    }
                }
            });
        });
    </script>
}
