@model MonAmour.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.OrderId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết Đơn hàng #@Model.OrderId</h1>
        <div>
            <a href="@Url.Action("Orders", "Admin")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Order Information -->
    <div class="row">
        <!-- Order Details -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Đơn hàng</h6>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("UpdateOrder", "Admin")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="OrderId" value="@Model.OrderId">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>ID Đơn hàng</label>
                                    <input type="text" class="form-control" value="#@Model.OrderId" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <select name="Status" class="form-control">
                                        @if (ViewBag.OrderStatuses != null)
                                        {
                                            foreach (var status in ViewBag.OrderStatuses)
                                            {
                                                var isSelected = Model.Status == status.Value;
                                                <option value="@status.Value" selected="@isSelected">@status.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mã tracking</label>
                                    <input type="text" class="form-control" value="@Model.TrackingNumber" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ngày giao hàng dự kiến</label>
                                    <input type="date" name="EstimatedDelivery" class="form-control" 
                                           value="@(Model.EstimatedDelivery?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phương thức vận chuyển</label>
                                    <select name="ShippingOptionId" class="form-control">
                                        <option value="">-- Chọn phương thức --</option>
                                        @if (ViewBag.ShippingOptions != null)
                                        {
                                            foreach (var option in ViewBag.ShippingOptions)
                                            {
                                                var isSelected = Model.ShippingOptionId == option.ShippingOptionId;
                                                <option value="@option.ShippingOptionId" selected="@isSelected">@option.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ngày giao hàng thực tế</label>
                                    <input type="datetime-local" name="DeliveredAt" class="form-control" 
                                           value="@(Model.DeliveredAt?.ToString("yyyy-MM-ddTHH:mm"))">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Địa chỉ giao hàng</label>
                                    <textarea name="ShippingAddress" class="form-control" rows="3" 
                                              placeholder="Nhập địa chỉ giao hàng chi tiết...">@Model.ShippingAddress</textarea>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật Đơn hàng
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Sản phẩm trong Đơn hàng</h6>
                </div>
                <div class="card-body">
                    @if (Model.OrderItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ProductImage))
                                                    {
                                                        <img src="@item.ProductImage" alt="@item.ProductName" 
                                                             class="img-thumbnail mr-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <strong>@item.ProductName</strong><br>
                                                        <small class="text-muted">ID: @item.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">@item.Quantity</span>
                                            </td>
                                            <td>
                                                @if (item.UnitPrice.HasValue)
                                                {
                                                    <span class="text-success">@item.UnitPrice.Value.ToString("N0") VNĐ</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-success font-weight-bold">@item.TotalPrice.ToString("N0") VNĐ</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="font-weight-bold">
                                        <td colspan="3" class="text-right">Tổng tiền sản phẩm:</td>
                                        <td class="text-success">@Model.OrderItems.Sum(i => i.TotalPrice).ToString("N0") VNĐ</td>
                                    </tr>
                                    @if (Model.ShippingCost.HasValue)
                                    {
                                        <tr>
                                            <td colspan="3" class="text-right">Phí vận chuyển:</td>
                                            <td class="text-warning">@Model.ShippingCost.Value.ToString("N0") VNĐ</td>
                                        </tr>
                                    }
                                    <tr class="font-weight-bold bg-light">
                                        <td colspan="3" class="text-right">Tổng cộng:</td>
                                        <td class="text-success">@(Model.TotalPrice?.ToString("N0") ?? "0") VNĐ</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-box fa-3x text-gray-300 mb-3"></i>
                            <h6 class="text-gray-600">Không có sản phẩm nào</h6>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Customer and Payment Info -->
        <div class="col-lg-4">
            <!-- Customer Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Khách hàng</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <input type="text" class="form-control" value="@Model.UserName" readonly>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" value="@Model.UserEmail" readonly>
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="text" class="form-control" value="@Model.UserPhone" readonly>
                    </div>
                    <div class="form-group">
                        <label>ID Khách hàng</label>
                        <input type="text" class="form-control" value="@Model.UserId" readonly>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                    {
                        <div class="form-group">
                            <label>Địa chỉ giao hàng</label>
                            <textarea class="form-control" rows="3" readonly>@Model.ShippingAddress</textarea>
                        </div>
                    }
                </div>
            </div>

            <!-- Payment Information -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Thanh toán</h6>
                </div>
                <div class="card-body">
                    @if (Model.PaymentDetails.Any())
                    {
                        @foreach (var payment in Model.PaymentDetails)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Phương thức:</strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="badge badge-primary">@payment.PaymentMethodName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Số tiền:</strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-success font-weight-bold">@(payment.Amount?.ToString("N0") ?? "0") VNĐ</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Trạng thái:</strong>
                                    </div>
                                    <div class="col-6">
                                        @switch (payment.PaymentStatus)
                                        {
                                            case "completed":
                                                <span class="badge badge-success">Hoàn thành</span>
                                                break;
                                            case "pending":
                                                <span class="badge badge-warning">Chờ xử lý</span>
                                                break;
                                            case "failed":
                                                <span class="badge badge-danger">Thất bại</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@payment.PaymentStatus</span>
                                                break;
                                        }
                                    </div>
                                </div>
                                @if (payment.CreatedAt.HasValue)
                                {
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Ngày thanh toán:</strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">@payment.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-credit-card fa-3x text-gray-300 mb-3"></i>
                            <h6 class="text-gray-600">Chưa có thông tin thanh toán</h6>
                            <p class="text-gray-500">Khách hàng chưa thanh toán cho đơn hàng này.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Timeline -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lịch sử Đơn hàng</h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Đơn hàng được tạo</h6>
                                <p class="timeline-text">
                                    @if (Model.CreatedAt.HasValue)
                                    {
                                        @Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                </p>
                            </div>
                        </div>
                        
                        @if (Model.PaymentDetails.Any())
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Thanh toán hoàn tất</h6>
                                    <p class="timeline-text">
                                        @if (Model.PaymentDetails.First().CreatedAt.HasValue)
                                        {
                                            @Model.PaymentDetails.First().CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Status == "shipping" || Model.Status == "completed")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-warning"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Đang giao hàng</h6>
                                    <p class="timeline-text">
                                        @if (Model.UpdatedAt.HasValue)
                                        {
                                            @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Status == "completed")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Giao hàng hoàn tất</h6>
                                    <p class="timeline-text">
                                        @if (Model.DeliveredAt.HasValue)
                                        {
                                            @Model.DeliveredAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-save form on change
            $('select[name="Status"]').on('change', function() {
                if (confirm('Bạn có muốn cập nhật trạng thái đơn hàng không?')) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '@Url.Action("UpdateOrderStatus", "Admin")';
                    
                    const token = document.createElement('input');
                    token.type = 'hidden';
                    token.name = '__RequestVerificationToken';
                    token.value = $('input[name="__RequestVerificationToken"]').val();
                    form.appendChild(token);
                    
                    const idInput = document.createElement('input');
                    idInput.type = 'hidden';
                    idInput.name = 'orderId';
                    idInput.value = '@Model.OrderId';
                    form.appendChild(idInput);
                    
                    const statusInput = document.createElement('input');
                    statusInput.type = 'hidden';
                    statusInput.name = 'status';
                    statusInput.value = $(this).val();
                    form.appendChild(statusInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        });
    </script>
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -35px;
        top: 5px;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #e3e6f0;
    }
    
    .timeline-content {
        background: #f8f9fc;
        padding: 15px;
        border-radius: 5px;
        border-left: 3px solid #4e73df;
    }
    
    .timeline-title {
        margin: 0 0 5px 0;
        font-size: 14px;
        font-weight: 600;
        color: #5a5c69;
    }
    
    .timeline-text {
        margin: 0;
        font-size: 12px;
        color: #858796;
    }
</style>
