@model MonAmour.ViewModels.ProductCreateViewModel
@{
    ViewData["Title"] = "Tạo Sản phẩm mới";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tạo Sản phẩm mới</h1>
        <a href="@Url.Action("Products", "Admin")" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Sản phẩm</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateProduct" method="post" id="createProductForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm...">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="CategoryId" class="form-label">Danh mục <span class="text-danger">*</span></label>
                                    <select asp-for="CategoryId" class="form-select" required>
                                        <option value="">Chọn danh mục...</option>
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <small class="form-text text-muted">Tối đa 1000 ký tự</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="form-label">Giá <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="Price" class="form-control" type="number" step="1000" min="0" 
                                               placeholder="0">
                                        <div class="input-group-append">
                                            <span class="input-group-text">₫</span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StockQuantity" class="form-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                                    <input asp-for="StockQuantity" class="form-control" type="number" min="0" 
                                           placeholder="0">
                                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Material" class="form-label">Chất liệu</label>
                                    <input asp-for="Material" class="form-control" placeholder="Ví dụ: Vải cotton, Gỗ sồi...">
                                    <span asp-validation-for="Material" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TargetAudience" class="form-label">Đối tượng khách hàng</label>
                                    <input asp-for="TargetAudience" class="form-control" placeholder="Ví dụ: Nam, Nữ, Trẻ em...">
                                    <span asp-validation-for="TargetAudience" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="form-label">Trạng thái <span class="text-danger">*</span></label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="active">Hoạt động</option>
                                <option value="inactive">Không hoạt động</option>
                                <option value="draft">Bản nháp</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save mr-2"></i>Lưu sản phẩm
                            </button>
                            <a href="@Url.Action("Products", "Admin")" class="btn btn-secondary ml-2">
                                <i class="fas fa-times mr-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle mr-2"></i>Hướng dẫn
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-primary">Tên sản phẩm:</h6>
                        <p class="small text-muted">Đặt tên rõ ràng, dễ hiểu để khách hàng dễ tìm kiếm</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-primary">Danh mục:</h6>
                        <p class="small text-muted">Chọn danh mục phù hợp để sản phẩm được phân loại đúng</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-primary">Mô tả:</h6>
                        <p class="small text-muted">Mô tả chi tiết về tính năng, ưu điểm của sản phẩm</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-primary">Giá:</h6>
                        <p class="small text-muted">Nhập giá chính xác, có thể sử dụng dấu phẩy để phân cách hàng nghìn</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="font-weight-bold text-primary">Tồn kho:</h6>
                        <p class="small text-muted">Cập nhật số lượng tồn kho thường xuyên để tránh tình trạng hết hàng</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-bolt mr-2"></i>Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("ProductCategories", "Admin")" class="list-group-item list-group-item-action">
                            <i class="fas fa-tags mr-2 text-primary"></i>Quản lý Danh mục
                        </a>
                        <a href="@Url.Action("Products", "Admin")" class="list-group-item list-group-item-action">
                            <i class="fas fa-list mr-2 text-info"></i>Xem tất cả Sản phẩm
                        </a>
                        <a href="@Url.Action("Dashboard", "Admin")" class="list-group-item list-group-item-action">
                            <i class="fas fa-tachometer-alt mr-2 text-success"></i>Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-save draft functionality
            let autoSaveTimer;
            const form = $('#createProductForm');
            
            form.on('input change', function() {
                clearTimeout(autoSaveTimer);
                autoSaveTimer = setTimeout(function() {
                    saveDraft();
                }, 2000); // Auto-save after 2 seconds of inactivity
            });
            
            function saveDraft() {
                const formData = form.serialize();
                localStorage.setItem('productDraft', formData);
                console.log('Draft saved automatically');
            }
            
            // Load draft on page load
            const savedDraft = localStorage.getItem('productDraft');
            if (savedDraft) {
                const urlParams = new URLSearchParams(savedDraft);
                urlParams.forEach((value, key) => {
                    const field = form.find(`[name="${key}"]`);
                    if (field.length > 0) {
                        field.val(value);
                    }
                });
                console.log('Draft loaded');
            }
            
            // Clear draft after successful submission
            form.on('submit', function() {
                localStorage.removeItem('productDraft');
            });
            
            // Price formatting
            $('#Price').on('input', function() {
                let value = this.value.replace(/[^\d]/g, '');
                if (value) {
                    value = parseInt(value).toLocaleString('vi-VN');
                    this.value = value;
                }
            });
            
            // Form validation enhancement
            form.validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 3,
                        maxlength: 200
                    },
                    CategoryId: {
                        required: true
                    },
                    Price: {
                        required: true,
                        min: 0
                    },
                    StockQuantity: {
                        required: true,
                        min: 0
                    }
                },
                messages: {
                    Name: {
                        required: "Vui lòng nhập tên sản phẩm",
                        minlength: "Tên sản phẩm phải có ít nhất 3 ký tự",
                        maxlength: "Tên sản phẩm không được vượt quá 200 ký tự"
                    },
                    CategoryId: {
                        required: "Vui lòng chọn danh mục"
                    },
                    Price: {
                        required: "Vui lòng nhập giá sản phẩm",
                        min: "Giá sản phẩm phải lớn hơn 0"
                    },
                    StockQuantity: {
                        required: "Vui lòng nhập số lượng tồn kho",
                        min: "Số lượng tồn kho phải lớn hơn hoặc bằng 0"
                    }
                },
                errorElement: 'span',
                errorClass: 'text-danger',
                highlight: function(element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function(element) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
    </script>
}
