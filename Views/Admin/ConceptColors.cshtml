@model List<MonAmour.ViewModels.ConceptColorDropdownViewModel>
@{
    ViewData["Title"] = "Quản lý màu sắc concept";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <div class="page-title">
                    <h1><i class="fas fa-palette"></i> Quản lý màu sắc concept</h1>
                    <p>Quản lý các màu sắc concept trong hệ thống</p>
                </div>
                <div class="page-actions">
                    <a href="@Url.Action("CreateConceptColor", "Admin")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm màu sắc mới
                    </a>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Colors Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list"></i> Danh sách màu sắc concept
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="colorsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên màu</th>
                                        <th>Mã màu</th>
                                        <th>Xem trước</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var color in Model)
                                    {
                                        <tr>
                                            <td>@color.ColorId</td>
                                            <td>
                                                <strong>@color.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(color.Code))
                                                {
                                                    <code>@color.Code</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có mã màu</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(color.Code))
                                                {
                                                    <div class="color-preview" style="width: 30px; height: 30px; background-color: @color.Code; border: 1px solid #ddd; border-radius: 4px;" title="@color.Code"></div>
                                                }
                                                else
                                                {
                                                    <div class="color-preview" style="width: 30px; height: 30px; background-color: #f8f9fa; border: 1px solid #ddd; border-radius: 4px;" title="Không có mã màu"></div>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditConceptColor", "Admin", new { id = color.ColorId })" 
                                                       class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deleteColor(@color.ColorId, '@color.Name')" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-palette fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có màu sắc concept nào</h5>
                            <p class="text-muted">Hãy tạo màu sắc concept đầu tiên để bắt đầu quản lý.</p>
                            <a href="@Url.Action("CreateConceptColor", "Admin")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Thêm màu sắc đầu tiên
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning"></i> Xác nhận xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa màu sắc concept <strong id="colorName"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle"></i>
                    <strong>Lưu ý:</strong> Nếu màu sắc này đang được sử dụng bởi các concept, bạn sẽ không thể xóa.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#colorsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json"
                },
                "pageLength": 10,
                "order": [[0, "desc"]],
                "columnDefs": [
                    { "orderable": false, "targets": [3, 4] }
                ]
            });
        });

        function deleteColor(id, name) {
            $('#colorName').text(name);
            $('#deleteForm').attr('action', '@Url.Action("DeleteConceptColor", "Admin")/' + id);
            $('#deleteModal').modal('show');
        }
    </script>
}
