@model MonAmour.ViewModels.LocationDetailViewModel
@{
    ViewData["Title"] = "Chi tiết Địa điểm";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết Địa điểm</h1>
        <div>
            <a href="@Url.Action("EditLocation", "Admin", new { id = Model.LocationId })" class="btn btn-warning shadow-sm mr-2">
                <i class="fas fa-edit fa-sm text-white-50"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Locations", "Admin")" class="d-none d-sm-inline-block btn btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Location Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Địa điểm</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="rounded-circle mb-3 bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px;">
                                <i class="fas fa-map-marker-alt fa-3x"></i>
                            </div>
                            <h5 class="font-weight-bold">@Model.Name</h5>
                            @if (Model.Status == "Active")
                            {
                                <span class="badge badge-success badge-lg">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge badge-warning badge-lg">Tạm dừng</span>
                            }
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="font-weight-bold text-primary">Thông tin cơ bản</h6>
                                        <table class="table table-sm table-borderless">
                                            <tr>
                                                <td class="font-weight-bold">ID:</td>
                                                <td>@Model.LocationId</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Tên:</td>
                                                <td>@Model.Name</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Trạng thái:</td>
                                                <td>
                                                    @if (Model.Status == "Active")
                                                    {
                                                        <span class="badge badge-success">Hoạt động</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">Tạm dừng</span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Tạo lúc:</td>
                                                <td>@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Cập nhật lúc:</td>
                                                <td>@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="font-weight-bold text-primary">Thông tin địa lý</h6>
                                        <table class="table table-sm table-borderless">
                                            <tr>
                                                <td class="font-weight-bold">Địa chỉ:</td>
                                                <td>@Model.Address</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Quận/Huyện:</td>
                                                <td>@(Model.District ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Thành phố:</td>
                                                <td>@(Model.City ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <td class="font-weight-bold">Đối tác:</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(Model.PartnerName))
                                                    {
                                                        <span class="badge badge-primary">@Model.PartnerName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.GgmapLink))
                            {
                                <div class="mb-3">
                                    <h6 class="font-weight-bold text-primary">Google Maps</h6>
                                    <a href="@Model.GgmapLink" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-external-link-alt mr-2"></i>Xem trên Google Maps
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Concepts Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Concept của Địa điểm</h6>
                    <a href="#" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus fa-sm"></i> Thêm Concept
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Concepts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên concept</th>
                                        <th>Mô tả</th>
                                        <th>Trạng thái</th>
                                        <th>Tạo lúc</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var concept in Model.Concepts)
                                    {
                                        <tr>
                                            <td>@concept.ConceptId</td>
                                            <td>
                                                <strong>@concept.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(concept.Description))
                                                {
                                                    <div class="text-truncate" style="max-width: 200px;" title="@concept.Description">
                                                        @concept.Description
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (concept.Status == "Active")
                                                {
                                                    <span class="badge badge-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Tạm dừng</span>
                                                }
                                            </td>
                                            <td>@(concept.CreatedAt?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-lightbulb fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có concept nào</h5>
                            <p class="text-muted">Địa điểm này chưa có concept nào được tạo</p>
                            <a href="#" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>Thêm Concept
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Statistics Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-right">
                                <h4 class="text-primary">@Model.Concepts.Count</h4>
                                <p class="text-muted mb-0">Concept</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@Model.Concepts.Count(c => c.Status == "Active")</h4>
                            <p class="text-muted mb-0">Hoạt động</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thao tác nhanh</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("EditLocation", "Admin", new { id = Model.LocationId })" class="btn btn-warning">
                            <i class="fas fa-edit mr-2"></i>Chỉnh sửa Địa điểm
                        </a>
                        <a href="@Url.Action("Locations", "Admin")" class="btn btn-info">
                            <i class="fas fa-map-marker-alt mr-2"></i>Quản lý Địa điểm
                        </a>
                        @if (Model.Status == "Active")
                        {
                            <button type="button" class="btn btn-secondary" onclick="toggleLocationStatus(@Model.LocationId, 'Inactive')">
                                <i class="fas fa-pause mr-2"></i>Tạm dừng
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-success" onclick="toggleLocationStatus(@Model.LocationId, 'Active')">
                                <i class="fas fa-play mr-2"></i>Kích hoạt
                            </button>
                        }
                        <button type="button" class="btn btn-outline-danger" onclick="deleteLocation(@Model.LocationId, '@Html.Raw(Model.Name.Replace("'", "\\'"))', @Model.Concepts.Count)">
                            <i class="fas fa-trash mr-2"></i>Xóa Địa điểm
                        </button>
                    </div>
                </div>
            </div>

            <!-- System Information Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin Hệ thống</h6>
                </div>
                <div class="card-body">
                    <table class="table table-sm table-borderless">
                        <tr>
                            <td class="font-weight-bold">ID:</td>
                            <td>@Model.LocationId</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Tạo lúc:</td>
                            <td>@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Cập nhật lúc:</td>
                            <td>@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold">Trạng thái:</td>
                            <td>
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge badge-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Tạm dừng</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteLocationModal" tabindex="-1" role="dialog" aria-labelledby="deleteLocationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLocationModalLabel">Xác nhận xóa địa điểm</h5>
                <button type="button" class="close" onclick="closeDeleteLocationModal()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="deleteLocationInfo">
                    <p>Bạn có chắc chắn muốn xóa địa điểm "<span id="locationNameToDelete"></span>"?</p>
                    <div id="conceptCountWarning" class="alert alert-warning" style="display: none;">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <strong>Cảnh báo:</strong> Địa điểm này có <span id="conceptCount"></span> concept. 
                        Bạn cần xóa hoặc chuyển các concept này trước khi xóa địa điểm.
                    </div>
                </div>
                
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Lưu ý:</strong> Hành động này không thể hoàn tác!
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeDeleteLocationModal()">Hủy</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteLocation" onclick="confirmDeleteLocation()">
                    <i class="fas fa-trash mr-2"></i>Xóa địa điểm
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteLocation(locationId, locationName, conceptCount) {
            console.log('deleteLocation called:', locationId, locationName, conceptCount);
            
            $('#locationNameToDelete').text(locationName);
            
            if (conceptCount > 0) {
                $('#conceptCount').text(conceptCount);
                $('#conceptCountWarning').show();
                $('#confirmDeleteLocation').prop('disabled', true);
            } else {
                $('#conceptCountWarning').hide();
                $('#confirmDeleteLocation').prop('disabled', false);
            }
            
            $('#deleteLocationModal').data('locationId', locationId);
            $('#deleteLocationModal').modal('show');
        }
        
        function closeDeleteLocationModal() {
            console.log('closeDeleteLocationModal called');
            $('#deleteLocationModal').modal('hide');
        }
        
        function confirmDeleteLocation() {
            console.log('confirmDeleteLocation called');
            
            var locationId = $('#deleteLocationModal').data('locationId');
            
            $('#confirmDeleteLocation').prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i>Đang xóa...');
            
            var form = $('<form>', {
                'method': 'POST',
                'action': '@Url.Action("DeleteLocation", "Admin")'
            });
            
            var token = $('input[name="__RequestVerificationToken"]').val();
            if (!token) {
                token = $('meta[name="__RequestVerificationToken"]').attr('content');
            }
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': '__RequestVerificationToken',
                'value': token
            }));
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': 'id',
                'value': locationId
            }));
            
            $('body').append(form);
            form.submit();
            
            return false;
        }
        
        function toggleLocationStatus(locationId, status) {
            var form = $('<form>', {
                'method': 'POST',
                'action': '@Url.Action("ToggleLocationStatus", "Admin")'
            });
            
            var token = $('input[name="__RequestVerificationToken"]').val();
            if (!token) {
                token = $('meta[name="__RequestVerificationToken"]').attr('content');
            }
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': '__RequestVerificationToken',
                'value': token
            }));
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': 'id',
                'value': locationId
            }));
            
            form.append($('<input>', {
                'type': 'hidden',
                'name': 'status',
                'value': status
            }));
            
            $('body').append(form);
            form.submit();
        }
    </script>
}
