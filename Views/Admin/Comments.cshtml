@model IEnumerable<MonAmour.Models.BlogComment>
@{
    ViewData["Title"] = "Quản lý bình luận";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h1>Quản lý bình luận</h1>
        <p class="subtitle">Danh sách tất cả bình luận trong hệ thống</p>
    </div>
    <div class="header-actions">
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-primary">Quay lại Dashboard</a>
    </div>
</div>

<!-- Notifications -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Comments Table -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Danh sách bình luận (@Model.Count())</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Bài viết</th>
                            <th>Người bình luận</th>
                            <th>Nội dung</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in Model)
                        {
                            <tr>
                                <td>@comment.CommentId</td>
                                <td>
                                    <a href="@Url.Action("Detail", "Blog", new { id = comment.BlogId })" 
                                       target="_blank" class="text-decoration-none">
                                        @(comment.Blog?.Title?.Length > 30 ? comment.Blog.Title.Substring(0, 30) + "..." : comment.Blog?.Title)
                                    </a>
                                </td>
                                <td>
                                    <div>
                                        <strong>@(comment.User?.Name ?? comment.AuthorName ?? "Anonymous")</strong>
                                        @if (!string.IsNullOrEmpty(comment.AuthorEmail))
                                        {
                                            <br><small class="text-muted">@comment.AuthorEmail</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="comment-content" style="max-width: 300px;">
                                        @if (comment.Content.Length > 100)
                                        {
                                            <span class="short-content">@comment.Content.Substring(0, 100)...</span>
                                            <span class="full-content" style="display: none;">@comment.Content</span>
                                            <button class="btn btn-link btn-sm p-0 toggle-content">Xem thêm</button>
                                        }
                                        else
                                        {
                                            @comment.Content
                                        }
                                    </div>
                                </td>
                                <td>
                                    <small>@(comment.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "")</small>
                                </td>
                                <td>
                                    @if (comment.IsApproved == true)
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Chờ duyệt</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        @if (comment.IsApproved != true)
                                        {
                                            <form method="post" action="@Url.Action("ApproveComment", "Admin")" class="d-inline">
                                                <input type="hidden" name="commentId" value="@comment.CommentId" />
                                                <button type="submit" class="btn btn-success btn-sm" 
                                                        onclick="return confirm('Bạn có chắc chắn muốn duyệt bình luận này?')">
                                                    <i class="fas fa-check"></i> Duyệt
                                                </button>
                                            </form>
                                        }
                                        <form method="post" action="@Url.Action("DeleteComment", "Admin")" class="d-inline">
                                            <input type="hidden" name="commentId" value="@comment.CommentId" />
                                            <button type="submit" class="btn btn-danger btn-sm" 
                                                    onclick="return confirm('Bạn có chắc chắn muốn xóa bình luận này?')">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có bình luận nào</h5>
                <p class="text-muted">Các bình luận sẽ xuất hiện ở đây khi có người dùng bình luận.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Toggle comment content
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-content');
            
            toggleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const commentContent = this.closest('.comment-content');
                    const shortContent = commentContent.querySelector('.short-content');
                    const fullContent = commentContent.querySelector('.full-content');
                    
                    if (fullContent.style.display === 'none') {
                        shortContent.style.display = 'none';
                        fullContent.style.display = 'block';
                        this.textContent = 'Ẩn bớt';
                    } else {
                        shortContent.style.display = 'block';
                        fullContent.style.display = 'none';
                        this.textContent = 'Xem thêm';
                    }
                });
            });
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
