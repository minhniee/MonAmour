@model MonAmour.AuthViewModel.ReviewSummaryViewModel
@{
    ViewData["Title"] = "Tổng Quan Đánh Giá";
    Layout = "_Layout";
}

<div class="min-h-screen bg-beige">
    <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="mb-6">
            <h1 class="text-3xl font-serif font-bold text-wine-red mb-4">
                <i class="fas fa-chart-bar me-2"></i>Tổng Quan Đánh Giá
            </h1>
            <div class="flex gap-4 mb-4">
                <a href="@Url.Action("MyReviews")" class="btn btn-secondary bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md">
                    <i class="fas fa-user me-2"></i>Đánh Giá Của Tôi
                </a>
            </div>
        </div>

        <!-- Overall Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-sm border p-6 text-center">
                <div class="text-3xl font-bold text-wine-red mb-2">@Model.TotalReviews</div>
                <div class="text-sm text-gray-600">Tổng Đánh Giá</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm border p-6 text-center">
                <div class="text-3xl font-bold text-wine-red mb-2">@Model.OverallAverageRating.ToString("F1")</div>
                <div class="flex items-center justify-center mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star @(i <= Model.OverallAverageRating ? "text-yellow-400" : "text-gray-300") text-sm"></i>
                    }
                </div>
                <div class="text-sm text-gray-600">Điểm Trung Bình</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm border p-6 text-center">
                <div class="text-3xl font-bold text-wine-red mb-2">@Model.RecentReviews.Count</div>
                <div class="text-sm text-gray-600">Đánh Giá Gần Đây</div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Rating Distribution -->
            <div class="bg-white rounded-lg shadow-sm border p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                    <i class="fas fa-chart-pie text-wine-red mr-2"></i>Phân Bố Điểm Đánh Giá
                </h2>
                
                @if (Model.OverallRatingDistribution.Any())
                {
                    <div class="space-y-3">
                        @for (int stars = 5; stars >= 1; stars--)
                        {
                            int count = Model.OverallRatingDistribution.ContainsKey(stars) ? Model.OverallRatingDistribution[stars] : 0;
                            double percentage = Model.TotalReviews > 0 ? (double)count / Model.TotalReviews * 100 : 0;
                            
                            <div class="flex items-center">
                                <div class="flex items-center w-24">
                                    <span class="text-sm font-medium">@stars sao</span>
                                </div>
                                <div class="flex-1 mx-3">
                                    <div class="w-full bg-gray-200 rounded-full h-3">
                                        <div class="bg-wine-red h-3 rounded-full transition-all duration-300" style="width: @percentage%"></div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <span class="text-sm text-gray-600 w-12 text-right">@count</span>
                                    <span class="text-xs text-gray-500 w-12">(@percentage.ToString("F1")%)</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <div class="text-gray-400 mb-2">
                            <i class="fas fa-chart-pie text-4xl"></i>
                        </div>
                        <p class="text-gray-500">Chưa có dữ liệu đánh giá</p>
                    </div>
                }
            </div>

            <!-- Recent Reviews -->
            <div class="bg-white rounded-lg shadow-sm border p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                    <i class="fas fa-clock text-wine-red mr-2"></i>Đánh Giá Gần Đây
                </h2>
                
                @if (Model.RecentReviews.Any())
                {
                    <div class="space-y-4 max-h-96 overflow-y-auto">
                        @foreach (var review in Model.RecentReviews)
                        {
                            <div class="border-b border-gray-100 pb-4 last:border-b-0">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center mb-1">
                                            <h4 class="text-sm font-medium text-gray-900 mr-2">@review.UserName</h4>
                                            <div class="flex items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="fas fa-star @(i <= review.Rating ? "text-yellow-400" : "text-gray-300") text-xs"></i>
                                                }
                                            </div>
                                        </div>
                                        <p class="text-sm text-gray-600 mb-1">
                                            <span class="font-medium">@review.TargetName</span>
                                            <span class="text-xs ml-1">(@(review.TargetType == "Product" ? "Sản phẩm" : "Ý tưởng"))</span>
                                        </p>
                                        @if (!string.IsNullOrEmpty(review.Comment))
                                        {
                                            <p class="text-sm text-gray-700 mb-2 line-clamp-2">@review.Comment</p>
                                        }
                                        <div class="text-xs text-gray-500">
                                            <i class="fas fa-clock mr-1"></i>
                                            @review.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="mt-4 pt-4 border-t border-gray-200 text-center">
                        <a href="@Url.Action("Index")" class="text-wine-red hover:text-wine-red/80 text-sm font-medium">
                            Xem tất cả đánh giá <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <div class="text-gray-400 mb-2">
                            <i class="fas fa-comments text-4xl"></i>
                        </div>
                        <p class="text-gray-500">Chưa có đánh giá nào</p>
                    </div>
                }
            </div>
        </div>

        @if (Model.TotalReviews > 0)
        {
            <!-- Additional Insights -->
            <div class="mt-8 bg-white rounded-lg shadow-sm border p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">
                    <i class="fas fa-lightbulb text-wine-red mr-2"></i>Thông Tin Thống Kê
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    @{
                        var positiveReviews = Model.OverallRatingDistribution.Where(kvp => kvp.Key >= 4).Sum(kvp => kvp.Value);
                        var negativeReviews = Model.OverallRatingDistribution.Where(kvp => kvp.Key <= 2).Sum(kvp => kvp.Value);
                        var neutralReviews = Model.OverallRatingDistribution.ContainsKey(3) ? Model.OverallRatingDistribution[3] : 0;
                        
                        double positivePercentage = Model.TotalReviews > 0 ? (double)positiveReviews / Model.TotalReviews * 100 : 0;
                        double negativePercentage = Model.TotalReviews > 0 ? (double)negativeReviews / Model.TotalReviews * 100 : 0;
                        double neutralPercentage = Model.TotalReviews > 0 ? (double)neutralReviews / Model.TotalReviews * 100 : 0;
                    }
                    
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600 mb-1">@positiveReviews</div>
                        <div class="text-sm text-gray-600 mb-1">Đánh giá tích cực</div>
                        <div class="text-xs text-gray-500">(@positivePercentage.ToString("F1")%)</div>
                        <div class="text-xs text-green-600 font-medium">4-5 sao</div>
                    </div>
                    
                    <div class="text-center">
                        <div class="text-2xl font-bold text-yellow-600 mb-1">@neutralReviews</div>
                        <div class="text-sm text-gray-600 mb-1">Đánh giá trung tính</div>
                        <div class="text-xs text-gray-500">(@neutralPercentage.ToString("F1")%)</div>
                        <div class="text-xs text-yellow-600 font-medium">3 sao</div>
                    </div>
                    
                    <div class="text-center">
                        <div class="text-2xl font-bold text-red-600 mb-1">@negativeReviews</div>
                        <div class="text-sm text-gray-600 mb-1">Đánh giá tiêu cực</div>
                        <div class="text-xs text-gray-500">(@negativePercentage.ToString("F1")%)</div>
                        <div class="text-xs text-red-600 font-medium">1-2 sao</div>
                    </div>
                    
                    <div class="text-center">
                        <div class="text-2xl font-bold text-wine-red mb-1">@Model.OverallRatingDistribution.Values.Max()</div>
                        <div class="text-sm text-gray-600 mb-1">Điểm phổ biến nhất</div>
                        <div class="text-xs text-gray-500">
                            @Model.OverallRatingDistribution.FirstOrDefault(kvp => kvp.Value == Model.OverallRatingDistribution.Values.Max()).Key sao
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
