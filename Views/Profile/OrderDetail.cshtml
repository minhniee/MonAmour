@model MonAmour.ViewModels.OrderDetailViewModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_Layout";
}

<div class="min-h-screen py-8" style="background-color: #fbf1e6;">
    <div class="container mx-auto px-4 max-w-4xl">
        <div class="mb-6">
            <a href="@Url.Action("OrderHistory")" class="text-sm hover:underline inline-flex items-center" style="color: #62000d;">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Quay lại danh sách đơn hàng
            </a>
        </div>

        <div class="bg-white rounded-lg border-2 p-6" style="border-color: #fbf1e6;">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="font-prata text-2xl font-bold mb-2" style="color: #62000d;">
                        Đơn hàng #@Model.OrderNumber
                    </h1>
                    <p class="text-gray-600">Ngày đặt: @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="text-sm px-3 py-1 rounded-full font-medium @(Model.Status.ToLower() switch {
                    "confirmed" => "bg-blue-50 text-blue-700 border-blue-200",
                    "shipping" => "bg-amber-50 text-amber-700 border-amber-200",
                    "completed" => "bg-emerald-50 text-emerald-700 border-emerald-200",
                    "canceled" => "bg-rose-50 text-rose-700 border-rose-200",
                    _ => "bg-gray-50 text-gray-700 border-gray-200"
                }) border">
                    @Model.Status
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold mb-4">Sản phẩm</h2>
                <div class="divide-y divide-gray-200">
                    @foreach (var item in Model.Items)
                    {
                        <div class="py-4 flex justify-between items-center">
                            <div>
                                <div class="font-medium">@item.Name</div>
                                <div class="text-sm text-gray-600">@item.ItemType • SL: @item.Quantity</div>
                            </div>
                            <div class="text-right">
                                <div class="font-medium">@String.Format("{0:#,##0}₫", item.TotalPrice)</div>
                                <div class="text-sm text-gray-600">@String.Format("{0:#,##0}₫", item.UnitPrice) / đơn vị</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Thông tin thanh toán -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold mb-4">Thanh toán</h2>
                <div class="bg-gray-50 rounded-lg p-4 space-y-2">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Phương thức thanh toán</span>
                        <span class="font-medium">@(Model.PaymentMethod ?? "Chưa có thông tin")</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Trạng thái thanh toán</span>
                        <span class="font-medium">@(Model.PaymentStatus ?? "Chưa có thông tin")</span>
                    </div>
                    @if (Model.PaymentDate.HasValue)
                    {
                        <div class="flex justify-between">
                            <span class="text-gray-600">Thời gian thanh toán</span>
                            <span class="font-medium">@Model.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <div class="flex justify-between">
                            <span class="text-gray-600">Mã giao dịch</span>
                            <span class="font-medium">@Model.TransactionId</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Thông tin giao hàng -->
            @if (!string.IsNullOrEmpty(Model.ShippingAddress))
            {
                <div class="mb-8">
                    <h2 class="text-lg font-semibold mb-4">Thông tin giao hàng</h2>
                    <div class="bg-gray-50 rounded-lg p-4 space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Địa chỉ</span>
                            <span class="font-medium">@Model.ShippingAddress</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Số điện thoại</span>
                            <span class="font-medium">@Model.ShippingPhone</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ShippingNote))
                        {
                            <div class="flex justify-between">
                                <span class="text-gray-600">Ghi chú</span>
                                <span class="font-medium">@Model.ShippingNote</span>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Tổng cộng -->
            <div class="border-t border-gray-200 pt-4">
                <div class="flex justify-between items-center text-lg">
                    <span class="font-medium">Tổng tiền hàng</span>
                    <span class="font-bold">@String.Format("{0:#,##0}₫", Model.TotalAmount)</span>
                </div>
                @if (Model.ShippingCost.HasValue)
                {
                    <div class="flex justify-between items-center mt-2 text-gray-600">
                        <span>Phí vận chuyển</span>
                        <span>@String.Format("{0:#,##0}₫", Model.ShippingCost)</span>
                    </div>
                    <div class="flex justify-between items-center mt-4 text-xl">
                        <span class="font-medium">Tổng cộng</span>
                        <span class="font-bold" style="color: #62000d;">
                            @String.Format("{0:#,##0}₫", Model.TotalAmount + Model.ShippingCost)
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
