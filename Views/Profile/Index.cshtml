@model MonAmour.AuthViewModel.UserViewModel.ProfileViewModel
@{
    ViewData["Title"] = "H·ªì S∆° C√° Nh√¢n";
    Layout = "_Layout";
}

<div class="min-h-screen bg-beige">
    <header class="bg-white shadow-sm border-b border-wine-red/10">
        <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
            <a href="/" class="text-wine-red hover:text-wine-red/80 transition-colors">‚Üê Quay l·∫°i trang ch·ªß</a>
            <h1 class="text-2xl font-serif font-bold text-wine-red">H·ªì S∆° C√° Nh√¢n</h1>
            <div class="w-20"></div>
        </div>
    </header>

    <main class="max-w-2xl mx-auto px-4 py-8">
        <div class="bg-white shadow-lg border-wine-red/20 rounded-lg border">
            <div class="text-center pb-6 p-6">
                <div class="relative mx-auto w-32 h-32 mb-4">
                    <div class="w-32 h-32 border-4 border-wine-red/20 rounded-full overflow-hidden bg-wine-red/10 flex items-center justify-center">
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="@Model.Avatar" alt="Avatar" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <span class="text-2xl text-wine-red">
                                @(Model.Name?.Split(' ').Select(n => n.FirstOrDefault()).Take(2).Aggregate("", (acc, c) => acc + c))
                            </span>
                        }
                    </div>
                    <label for="avatarInput" id="avatarUploadBtn" class="absolute bottom-0 right-0 bg-wine-red text-white p-2 rounded-full cursor-pointer hover:bg-wine-red/90 transition-colors hidden">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 3 0 016 0z"></path>
                        </svg>
                    </label>
                    <input type="file" accept="image/*" id="avatarInput" name="avatar" class="hidden" />
                </div>
                <h2 class="text-wine-red font-serif text-2xl" id="profileTitle">H·ªì S∆° C·ªßa B·∫°n</h2>
            </div>

            <form id="profileForm" class="p-6 space-y-6" method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Profile">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="mb-4 text-sm text-red-700 bg-red-50 border border-red-200 rounded-md px-3 py-2" role="alert"></div>

                <!-- Name -->
                <div class="space-y-2">
                    <label for="name" class="text-wine-red font-medium">H·ªç v√† T√™n</label>
                    <input asp-for="Name" id="name" disabled 
                           class="w-full text-gray-700 py-2 px-3 bg-gray-50 rounded-md border border-gray-300" />
                    <span asp-validation-for="Name" class="text-sm text-red-600"></span>
                </div>

                <!-- Email -->
                <div class="space-y-2">
	                <label for="email" class="text-wine-red font-medium">Email</label>
	                <div class="relative">
		                <input asp-for="Email" id="email" readonly
		                       class="w-full bg-gray-100 border-gray-300 text-gray-600 cursor-not-allowed py-2 px-3 rounded-md" />
	                </div>
                </div>


                <!-- Birth Date -->
                <div class="space-y-2">
	                <label for="birthDate" class="text-wine-red font-medium">Ng√†y Sinh</label>
	                <input type="date" id="birthDate" asp-for="BirthDate" disabled value="@Model.BirthDate?.ToString("yyyy-MM-dd")" 
	                       class="w-full text-gray-700 py-2 px-3 bg-gray-50 rounded-md border border-gray-300" />
                    <span asp-validation-for="BirthDate" class="text-sm text-red-600"></span>
                </div>
				
                <!-- Gender -->
                <div class="space-y-2">
	                <label for="gender" class="text-wine-red font-medium">Gi·ªõi t√≠nh</label>
	                <select id="gender" asp-for="Gender" disabled class="w-full text-gray-700 py-2 px-3 bg-gray-50 rounded-md border border-gray-300">
                        <option value="">-- Ch·ªçn gi·ªõi t√≠nh --</option>
                        <option value="male">Nam</option>
                        <option value="female">N·ªØ</option>
                        <option value="other">Kh√°c</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-sm text-red-600"></span>
                </div>


                <!-- Phone -->
                <div class="space-y-2">
	                <label for="phone" class="text-wine-red font-medium">S·ªë ƒêi·ªán Tho·∫°i</label>
	                <input asp-for="Phone" id="phone" disabled 
	                       class="w-full text-gray-700 py-2 px-3 bg-gray-50 rounded-md border border-gray-300" />
                    <span asp-validation-for="Phone" class="text-sm text-red-600"></span>
                </div>
				
               

                <!-- Action Buttons -->
                <div class="flex gap-4 pt-6">
                    <button type="button" id="editBtn" class="flex-1 bg-wine-red hover:bg-wine-red/90 text-white py-2 px-4 rounded-md transition-colors flex items-center justify-center gap-2">
                        ‚úèÔ∏è Ch·ªânh S·ª≠a
                    </button>
                    <button type="submit" id="saveBtn" class="flex-1 bg-wine-red hover:bg-wine-red/90 text-white py-2 px-4 rounded-md transition-colors hidden flex items-center justify-center gap-2">
                        üíæ L∆∞u
                    </button>
                    <button type="button" id="cancelBtn" class="flex-1 border-wine-red text-wine-red hover:bg-wine-red/5 bg-transparent py-2 px-4 rounded-md border transition-colors hidden flex items-center justify-center gap-2">
                        ‚ùå H·ªßy
                    </button>
                </div>
            </form>
        </div>

        <div class="mt-6 text-center">
            <a href="/Profile/ChangePassword" class="text-wine-red hover:text-wine-red/80 underline transition-colors">
                ƒê·ªïi m·∫≠t kh·∫©u
            </a>
        </div>
    </main>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const editBtn = document.getElementById('editBtn');
        const saveBtn = document.getElementById('saveBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const profileTitle = document.getElementById('profileTitle');
        const avatarUploadBtn = document.getElementById('avatarUploadBtn');
        const avatarInput = document.getElementById('avatarInput');

        const fields = ['name', 'birthDate', 'gender', 'phone'];
        let originalValues = {};

        fields.forEach(field => {
            const el = document.getElementById(field);
            originalValues[field] = el ? el.value : '';
        });

        editBtn.addEventListener('click', function() {
            fields.forEach(field => {
                const input = document.getElementById(field);
                if (!input) return;
                input.disabled = false;
                input.classList.remove('bg-gray-50', 'border-gray-300');
                input.classList.add('border-wine-red/30');
            });

            profileTitle.textContent = 'Ch·ªânh S·ª≠a H·ªì S∆°';
            editBtn.classList.add('hidden');
            saveBtn.classList.remove('hidden');
            cancelBtn.classList.remove('hidden');
            avatarUploadBtn.classList.remove('hidden');
        });

        cancelBtn.addEventListener('click', function() {
            fields.forEach(field => {
                const input = document.getElementById(field);
                if (!input) return;
                input.value = originalValues[field];
                input.disabled = true;
                input.classList.add('bg-gray-50', 'border-gray-300');
                input.classList.remove('border-wine-red/30');
            });

            profileTitle.textContent = 'H·ªì S∆° C·ªßa B·∫°n';
            editBtn.classList.remove('hidden');
            saveBtn.classList.add('hidden');
            cancelBtn.classList.add('hidden');
            avatarUploadBtn.classList.add('hidden');
        });

        avatarInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    let avatarImg = document.querySelector('.w-32.h-32 img');
                    if (!avatarImg) {
                        const container = document.querySelector('.w-32.h-32');
                        avatarImg = document.createElement('img');
                        avatarImg.className = "w-full h-full object-cover";
                        container.innerHTML = "";
                        container.appendChild(avatarImg);
                    }
                    avatarImg.src = ev.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
		(function(){
			var form = document.getElementById('profileForm');
			if (!form) return;
			if (window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive) {
				window.jQuery.validator.unobtrusive.parse(form);
			}
		})();
	</script>
}
