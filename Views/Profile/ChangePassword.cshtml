@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MonAmour.AuthViewModel.UserViewModel.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="min-h-screen bg-beige py-8">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-wine-red/10 mb-8">
        <div class="max-w-4xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a asp-action="Index" class="text-wine-red hover:text-wine-red/80 transition-colors">
                    ← Quay lại hồ sơ
                </a>
                <h1 class="text-2xl font-serif font-bold text-wine-red">Đổi Mật Khẩu</h1>
                <div class="w-20"></div>  <!-- Spacer for centering -->
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-md mx-auto px-4">
        <div class="bg-white shadow-lg rounded-lg border border-wine-red/20">
            <div class="p-6">
                <form asp-action="ChangePassword" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

                    <!-- Current Password -->
                    <div class="space-y-2">
                        <label asp-for="CurrentPassword" class="block text-sm font-medium text-wine-red">
                            Mật khẩu hiện tại
                        </label>
                        <input asp-for="CurrentPassword" type="password"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-wine-red/20 focus:border-wine-red" />
                        <span asp-validation-for="CurrentPassword" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- New Password -->
                    <div class="space-y-2">
                        <label asp-for="NewPassword" class="block text-sm font-medium text-wine-red">
                            Mật khẩu mới
                        </label>
                        <input asp-for="NewPassword" type="password"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-wine-red/20 focus:border-wine-red" />
                        <span asp-validation-for="NewPassword" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="space-y-2">
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-wine-red">
                            Xác nhận mật khẩu mới
                        </label>
                        <input asp-for="ConfirmPassword" type="password"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-wine-red/20 focus:border-wine-red" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button type="submit"
                                class="w-full bg-wine-red text-white py-2 px-4 rounded-md hover:bg-wine-red/90 transition-colors">
                            Đổi mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
