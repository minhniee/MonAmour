<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mon Amour</title>
    <link rel="icon" type="image/webp" href="~/monAmour-logo.png">
    @* <link rel="icon" href="/favicon.ico" type="image/x-icon"> *@
    <meta name="description" content="Experience luxury and elegance with Mon Amour premium services" />

    <!-- Google Analytics -->
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-G-5JB7G3GR7T"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-5JB7G3GR7T');
    </script>

    <!-- Tailwind CSS & Alpine.js -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

    <!-- Chatbot Styles -->
    <link rel="stylesheet" href="~/css/chatbot.css" />
    
    <!-- Google Material Icons for Chatbot -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'wine-red': '#62000d',
                        'beige': '#fbf1e6',
                        'primary': '#62000d',
                        'primary-foreground': '#fbf1e6',
                        'background': '#fbf1e6',
                        'foreground': '#62000d',
                        'muted': '#f5f5f5',
                        'muted-foreground': '#6b7280',
                        'border': '#e5e7eb'
                    },
                    fontFamily: {
                        'prata': ['Prata', 'serif'],
                        'noto-serif': ['"Noto Serif"', 'serif'],
                        'noto-serif-extracondensed': ['"Noto Serif ExtraCondensed"', 'serif'],
                        'serif': ['"Noto Serif ExtraCondensed"', 'serif']
                    },
                    fontWeight: {
                        'semi-bold': '600',
                        'medium': '500'
                    }
                }
            }
        }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;500;600;700&family=Prata&display=swap" rel="stylesheet">

    <!-- Custom font-face -->
    <style>
        @@font-face {
            font-family: 'Noto Serif ExtraCondensed';
            src: url('/fonts/NotoSerifExtraCondensed.ttf') format('truetype');
            font-weight: 400 700; /* hỗ trợ từ 400 đến 700 */
            font-stretch: 75%; /* ExtraCondensed */
            font-display: swap;
        }

        body {
            font-family: 'Noto Serif ExtraCondensed', serif;
            font-stretch: 75%; /* ép về ExtraCondensed */
            font-size: 18px;
            line-height: 1.6;
            padding-top: 10px;
            background-color: #fbf1e6;
            color: #62000d;
        }

        .font-prata {
            font-family: 'Prata', serif;
            font-weight: 500; /* Semi-bold for Prata titles */
        }

        /* Global headings use Prata */
        h1, h2, h3, h4, .heading-prata {
            font-family: 'Prata', serif !important;
            font-weight: 500;
        }

        /* Header navigation font */
        nav a {
            font-family: 'Noto Serif', serif;
            font-weight: 600; /* Semi-bold for header */
        }

        /* Body text font */
        .font-body {
            font-family: 'Noto Serif ExtraCondensed', serif;
            font-stretch: 75%;
        }

        /* Global body text elements use ExtraCondensed */
        p, li, span, small, label, input, textarea, select, button {
            font-family: 'Noto Serif ExtraCondensed', serif;
            font-stretch: 75%;
        }

        /* Improve justification and hyphenation for body text */
        .text-justify {
            text-align: justify;
            hyphens: auto;
            -webkit-hyphens: auto;
            -ms-hyphens: auto;
        }

        /* Responsive base type scale */
        html { font-size: 16px; }
        body { font-size: clamp(16px, 1.2vw + 12px, 18px); }
        h1 { font-size: clamp(1.875rem, 2.5vw + 1rem, 3rem); }
        h2 { font-size: clamp(1.5rem, 2vw + 0.8rem, 2.25rem); }
        h3 { font-size: clamp(1.25rem, 1.5vw + 0.6rem, 1.75rem); }

        /* Fluid container padding */
        .container { padding-left: 1rem; padding-right: 1rem; }
        @@media (min-width: 768px) { .container { padding-left: 1.25rem; padding-right: 1.25rem; } }
        @@media (min-width: 1024px) { .container { padding-left: 2rem; padding-right: 2rem; } }

        /* Images scale nicely */
        img { max-width: 100%; height: auto; }

        /* Prevent horizontal scroll on small screens */
        html, body { overflow-x: hidden; }

        /* Floating buttons spacing and sizing on small screens */
        @@media (max-width: 640px) {
            .fixed.bottom-24.right-6 { bottom: 5rem; right: 1rem; } /* Contact button trên mobile */
            .fixed.bottom-6.right-6 { bottom: 1rem; right: 1rem; }
            .fixed.bottom-6.right-6 .w-14.h-14 { width: 3rem; height: 3rem; }
            .fixed.bottom-6.right-6 .w-12.h-12 { width: 2.5rem; height: 2.5rem; }
        }
    </style>
</head>
<body class="font-serif antialiased text-lg">
    <div class="min-h-screen">
        @await Html.PartialAsync("_Header")
        <main>
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </main>
        @await Html.PartialAsync("_Footer")
    </div>

<!-- Chatbot -->
    <button id="chatbot-toggler">
        <span class="material-symbols-rounded">smart_toy</span>
        <span class="material-symbols-rounded">close</span>
    </button>
    
    <div class="chatbot-popup">
        <!-- Chatbot Header -->
        <div class="chat-header">
            <div class="header-info">
                <svg class="chatbot-logo" xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 1024 1024">
                    <path d="M738.3 287.6H285.7c-59 0-106.8 47.8-106.8 106.8v303.1c0 59 47.8 106.8 106.8 106.8h81.5v111.1c0 .7.8 1.1 1.4.7l166.9-110.6 41.8-.8h117.4l43.6-.4c59 0 106.8-47.8 106.8-106.8V394.5c0-59-47.8-106.9-106.8-106.9zM351.7 448.2c0-29.5 23.9-53.5 53.5-53.5s53.5 23.9 53.5 53.5-23.9 53.5-53.5 53.5-53.5-23.9-53.5-53.5zm157.9 267.1c-67.8 0-123.8-47.5-132.3-109h264.6c-8.6 61.5-64.5 109-132.3 109zm110-213.7c-29.5 0-53.5-23.9-53.5-53.5s23.9-53.5 53.5-53.5 53.5 23.9 53.5 53.5-23.9 53.5-53.5 53.5zM867.2 644.5V453.1h26.5c19.4 0 35.1 15.7 35.1 35.1v121.1c0 19.4-15.7 35.1-35.1 35.1h-26.5zM95.2 609.4V488.2c0-19.4 15.7-35.1 35.1-35.1h26.5v191.3h-26.5c-19.4 0-35.1-15.7-35.1-35.1zM561.5 149.6c0 23.4-15.6 43.3-36.9 49.7v44.9h-30v-44.9c-21.4-6.5-36.9-26.3-36.9-49.7 0-28.6 23.3-51.9 51.9-51.9s51.9 23.3 51.9 51.9z" />
                </svg>
                <h2 class="logo-text">Mon Mon AI</h2>
            </div>
            <button id="close-chatbot" class="material-symbols-rounded">keyboard_arrow_down</button>
        </div>
        <!-- Chatbot Body -->
        <div class="chat-body">
            <!-- Welcome message will be added by JavaScript -->
        </div>
        <!-- Chatbot Footer -->
        <div class="chat-footer">
            <form action="#" class="chat-form">
                <textarea placeholder="Nhập tin nhắn..." class="message-input" required></textarea>
                <div class="chat-controls">
                    <button type="button" id="emoji-picker" class="material-symbols-outlined">sentiment_satisfied</button>
                    <div class="file-upload-wrapper">
                        <input type="file" id="file-input" hidden />
                        <img src="#" />
                        <button type="button" id="file-upload" class="material-symbols-rounded">attach_file</button>
                        <button type="button" id="file-cancel" class="material-symbols-rounded">close</button>
                    </div>
                    <button type="submit" id="send-message" class="material-symbols-rounded">arrow_upward</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Floating Contact Button -->
    <div x-data="{ open: false }" class="fixed bottom-24 right-6 z-50">
        <!-- Social Media Buttons (expand upward) -->
        <div x-show="open" 
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform translate-y-4"
             x-transition:enter-end="opacity-100 transform translate-y-0"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100 transform translate-y-0"
             x-transition:leave-end="opacity-0 transform translate-y-4"
             class="flex flex-col space-y-3 mb-3">
            
            <!-- Facebook Button -->
            <a href="https://www.facebook.com/profile.php?id=61579323131214" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-blue-600 hover:bg-blue-700 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 group">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>

            <!-- Zalo Button -->
            <a href="https://zalo.me/MonAmourVN" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-white hover:bg-gray-100 rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200">
	            <img src="https://stc-zaloprofile.zdn.vn/pc/v1/images/logo.svg" 
	                 alt="Zalo" class="w-6 h-6" />
            </a>


            <!-- TikTok Button -->
            <a href="https://www.tiktok.com/@@artist_of_love" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-black hover:bg-gray-800 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 group">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                </svg>
            </a>
        </div>

        <!-- Main Contact Button -->
        <button @@click="open = !open"
                class="w-14 h-14 bg-wine-red hover:bg-wine-red/90 text-beige rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 relative">
            <!-- Contact Icon (when closed) -->
            <svg x-show="!open" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            
            <!-- Close Icon (when open) -->
            <svg x-show="open" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            
            <!-- Pulse Animation -->
            <span class="absolute inset-0 rounded-full bg-wine-red animate-ping opacity-20"></span>
        </button>
    </div>

    

    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // Google Analytics Helper Functions for MonAmour
        function trackEvent(eventName, parameters = {}) {
            if (typeof gtag !== 'undefined') {
                gtag('event', eventName, parameters);
            }
        }

        // Track concept views
        function trackConceptView(conceptId, conceptName, category, price) {
            trackEvent('view_item', {
                currency: 'VND',
                value: price,
                item_id: conceptId,
                item_name: conceptName,
                item_category: category,
                content_type: 'concept'
            });
        }

        // Track contact form submissions
        function trackContactSubmission(formType = 'concept_contact') {
            trackEvent('generate_lead', {
                currency: 'VND',
                form_type: formType,
                content_type: 'contact_form'
            });
        }

        // Track button clicks
        function trackButtonClick(buttonName, buttonType = 'cta') {
            trackEvent('select_content', {
                content_type: buttonType,
                content_id: buttonName
            });
        }

        // Track navigation
        function trackNavigation(destination, source = 'menu') {
            trackEvent('select_content', {
                content_type: 'navigation',
                content_id: destination,
                source: source
            });
        }

        // Track social media clicks
        function trackSocialClick(platform) {
            trackEvent('select_content', {
                content_type: 'social_media',
                content_id: platform
            });
        }

        // Auto-track contact form submissions
        document.addEventListener('submit', function(e) {
            if (e.target.id === 'contactForm' || e.target.classList.contains('contact-form')) {
                trackContactSubmission();
            }
        });

        // Auto-track social media clicks
        document.addEventListener('click', function(e) {
            const link = e.target.closest('a[href*="facebook.com"], a[href*="zalo.me"], a[href*="tiktok.com"]');
            if (link) {
                let platform = 'unknown';
                if (link.href.includes('facebook.com')) platform = 'facebook';
                else if (link.href.includes('zalo.me')) platform = 'zalo';
                else if (link.href.includes('tiktok.com')) platform = 'tiktok';
                
                trackSocialClick(platform);
            }
        });

        // Track scroll depth
        let maxScroll = 0;
        window.addEventListener('scroll', function() {
            const scrollPercent = Math.round((window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100);
            
            // Track at 25%, 50%, 75%, 90% milestones
            [25, 50, 75, 90].forEach(milestone => {
                if (scrollPercent >= milestone && maxScroll < milestone) {
                    trackEvent('scroll', {
                        percent_scrolled: milestone
                    });
                }
            });
            
            maxScroll = Math.max(maxScroll, scrollPercent);
        });
    </script>

    <!-- Emoji Mart script for chatbot emoji picker -->
    <script src="https://cdn.jsdelivr.net/npm/emoji-mart@latest/dist/browser.js"></script>
    
    <!-- Chatbot Script -->
    <script src="~/js/chatbot.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
