<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonAmour</title>
    <meta name="description" content="Experience luxury and elegance with MonAmour premium services" />

    <!-- Tailwind CSS & Alpine.js -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'wine-red': '#62000d',
                        'beige': '#fbf1e6',
                        'primary': '#62000d',
                        'primary-foreground': '#fbf1e6',
                        'background': '#fbf1e6',
                        'foreground': '#62000d',
                        'muted': '#f5f5f5',
                        'muted-foreground': '#6b7280',
                        'border': '#e5e7eb'
                    },
                    fontFamily: {
                        'prata': ['Prata', 'serif'],
                        'noto-serif-extracondensed': ['"Noto Serif ExtraCondensed"', 'serif'],
                        'serif': ['"Noto Serif ExtraCondensed"', 'serif']
                    }
                }
            }
        }
    </script>

    <!-- Custom font-face -->
    <style>
        @@font -face {
            font-family: 'Noto Serif ExtraCondensed';
            src: url('/fonts/NotoSerifExtraCondensed.ttf') format('truetype');
            font-weight: 400 700; /* hỗ trợ từ 400 đến 700 */
            font-stretch: 75%; /* ExtraCondensed */
            font-display: swap;
        }

        body {
            font-family: 'Noto Serif ExtraCondensed', serif;
            font-stretch: 75%; /* ép về ExtraCondensed */
            font-size: 18px;
            line-height: 1.6;
            padding-top: 10px;
            background-color: #fbf1e6;
            color: #62000d;
        }

        .font-prata {
            font-family: 'Prata', serif;
        }
    </style>
</head>
<body class="font-serif antialiased text-lg">
    <div class="min-h-screen">
        @await Html.PartialAsync("_Header")
        <main>
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </main>
        @await Html.PartialAsync("_Footer")
    </div>

    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
