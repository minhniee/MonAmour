<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonAmour</title>
    <meta name="description" content="Experience luxury and elegance with MonAmour premium services" />

    <!-- Tailwind CSS & Alpine.js -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'wine-red': '#62000d',
                        'beige': '#fbf1e6',
                        'primary': '#62000d',
                        'primary-foreground': '#fbf1e6',
                        'background': '#fbf1e6',
                        'foreground': '#62000d',
                        'muted': '#f5f5f5',
                        'muted-foreground': '#6b7280',
                        'border': '#e5e7eb'
                    },
                    fontFamily: {
                        'prata': ['Prata', 'serif'],
                        'noto-serif-extracondensed': ['"Noto Serif ExtraCondensed"', 'serif'],
                        'serif': ['"Noto Serif ExtraCondensed"', 'serif']
                    }
                }
            }
        }
    </script>

    <!-- Custom font-face -->
    <style>
        @@font -face {
            font-family: 'Noto Serif ExtraCondensed';
            src: url('/fonts/NotoSerifExtraCondensed.ttf') format('truetype');
            font-weight: 400 700; /* hỗ trợ từ 400 đến 700 */
            font-stretch: 75%; /* ExtraCondensed */
            font-display: swap;
        }

        body {
            font-family: 'Noto Serif ExtraCondensed', serif;
            font-stretch: 75%; /* ép về ExtraCondensed */
            font-size: 18px;
            line-height: 1.6;
            padding-top: 10px;
            background-color: #fbf1e6;
            color: #62000d;
        }

        .font-prata {
            font-family: 'Prata', serif;
        }
    </style>
</head>
<body class="font-serif antialiased text-lg">
    <div class="min-h-screen">
        @await Html.PartialAsync("_Header")
        <main>
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </main>
        @await Html.PartialAsync("_Footer")
    </div>

    <!-- Floating Contact Button -->
    <div x-data="{ open: false }" class="fixed bottom-6 right-6 z-50">
        <!-- Social Media Buttons (expand upward) -->
        <div x-show="open" 
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform translate-y-4"
             x-transition:enter-end="opacity-100 transform translate-y-0"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100 transform translate-y-0"
             x-transition:leave-end="opacity-0 transform translate-y-4"
             class="flex flex-col space-y-3 mb-3">
            
            <!-- Facebook Button -->
            <a href="https://facebook.com/MonAmourVN" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-blue-600 hover:bg-blue-700 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 group">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>

            <!-- Zalo Button -->
            <a href="https://zalo.me/MonAmourVN" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-blue-500 hover:bg-blue-600 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 group">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 16.794c-.08.234-.234.445-.445.598a1.778 1.778 0 01-.956.287c-.312 0-.611-.08-.871-.234l-2.722-1.611c-.338-.195-.728-.299-1.125-.299-.397 0-.787.104-1.125.299L7.928 17.445c-.26.154-.559.234-.871.234a1.778 1.778 0 01-.956-.287c-.211-.153-.365-.364-.445-.598-.234-.689.026-1.456.624-1.84l2.436-1.561c.364-.234.585-.637.585-1.067V9.333c0-.689.559-1.248 1.248-1.248h1.039c.689 0 1.248.559 1.248 1.248v2.993c0 .43.221.833.585 1.067l2.436 1.561c.598.384.858 1.151.624 1.84z"/>
                </svg>
            </a>

            <!-- TikTok Button -->
            <a href="https://tiktok.com/@MonAmourVN" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-black hover:bg-gray-800 text-white rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 group">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                </svg>
            </a>
        </div>

        <!-- Main Contact Button -->
        <button @click="open = !open"
                class="w-14 h-14 bg-wine-red hover:bg-wine-red/90 text-beige rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-200 relative">
            <!-- Contact Icon (when closed) -->
            <svg x-show="!open" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            
            <!-- Close Icon (when open) -->
            <svg x-show="open" class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            
            <!-- Pulse Animation -->
            <span class="absolute inset-0 rounded-full bg-wine-red animate-ping opacity-20"></span>
        </button>
    </div>

    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
