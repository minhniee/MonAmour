@if (ViewBag.IsLoggedIn)
{
    <!-- User Avatar Dropdown Component -->
    <div class="relative" x-data="{ open: false }">
    <!-- User Avatar Button -->
    <button x-on:click="open = !open" class="flex items-center space-x-2 p-2 md:p-2.5 rounded-full hover:bg-muted transition-colors">
        <div class="w-8 h-8 md:w-9 md:h-9 rounded-full bg-primary flex items-center justify-center">
        <img src="/Imagine/Avatars/@(ViewBag.UserAvatar ?? "avatar.png")" alt="User Avatar" class="w-8 h-8 md:w-9 md:h-9 rounded-full">
        </div>
        <span class="hidden md:block text-sm md:text-base font-medium text-foreground max-w-[10rem] truncate">
            @(ViewBag.UserName ?? "Người dùng")
        </span>
    </button>

    <!-- Dropdown Menu -->
    <div x-show="open"
         x-on:click.away="open = false"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="absolute right-0 mt-2 w-56 md:w-64 max-h-[80vh] overflow-auto bg-background border border-border rounded-lg shadow-lg z-50">

        <div class="py-2">
            <!-- User Info -->
            <div class="px-4 py-2 border-b border-border">
                <p class="text-sm font-medium text-foreground">@(ViewBag.UserName ?? "Người dùng")</p>
                <p class="text-xs text-muted-foreground">@(ViewBag.UserEmail ?? "user@example.com")</p>
            </div>

            <!-- Menu Items -->
            <div class="py-1">
                <a href="@Url.Action("Index", "Profile")"
                   class="flex items-center px-4 py-2 text-sm md:text-base text-foreground hover:bg-muted transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Hồ sơ cá nhân
                </a>

                <a href="@Url.Action("OrderHistory", "Cart")"
                   class="flex items-center px-4 py-2 text-sm md:text-base text-foreground hover:bg-muted transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    Lịch sử mua hàng
                </a>

            
            </div>

            <!-- Divider -->
            <div class="border-t border-border my-1"></div>

            <!-- Admin Link (if user is admin) -->
            @if (ViewBag.IsAdmin == true)
            {
                <a href="@Url.Action("Dashboard", "Admin")"
                   class="flex items-center px-4 py-2 text-sm md:text-base text-foreground hover:bg-muted transition-colors">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                    Quản trị
                </a>
                <div class="border-t border-border my-1"></div>
            }

            <!-- Logout -->
            <form method="post" action="@Url.Action("Logout", "Auth")" class="block">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="flex items-center w-full px-4 py-2 text-sm md:text-base text-red-600 hover:bg-red-50 transition-colors"
                        x-on:click="open = false">
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Đăng xuất
                </button>
            </form>
        </div>
            </div>
        </div>
}
else
{
    <!-- Desktop Login/Signup Buttons (hidden on mobile to avoid duplication) -->
    <div class="hidden md:flex items-center space-x-4">
        <a href="@Url.Action("Login", "Auth")" class="text-base font-bold text-foreground hover:text-foreground/80">
            Đăng nhập
        </a>
        <a href="@Url.Action("Signup", "Auth")" class="px-3 py-1.5 text-base font-bold bg-primary text-primary-foreground rounded-md hover:bg-primary/90">
            Đăng ký
        </a>
    </div>
}

<script>
    // Make sure Alpine.js is loaded
    document.addEventListener('alpine:init', () => {
        console.log('Alpine.js initialized for user dropdown');
    });
</script>