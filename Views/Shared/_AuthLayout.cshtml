<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonAmour</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prata&family=Noto+Serif:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#62000d',
                        'primary-foreground': '#fbf1e6',
                        background: '#fbf1e6',
                        foreground: '#62000d',
                        muted: '#f5f5f4',
                        'muted-foreground': '#78716c',
                        border: '#e7e5e4',
                        destructive: '#dc2626'
                    },
                    fontFamily: {
                        'heading': ['Prata', 'serif'],
                        'body': ['Noto Serif', 'serif']
                    }
                }
            }
        }
    </script>
</head>
<body class="font-body">
    <div class="min-h-screen bg-background flex">
        Left side - Branding
        <div class="hidden lg:flex lg:w-1/2 bg-primary flex-col justify-center items-center p-12">
            <div class="text-center">
                <a href="/" class="inline-block mb-8">
                    <img src="/images/MonAmour-logo.png" alt="MonAmour" width="200" height="160" class="filter brightness-0 invert" />
                </a>
                <h1 class="font-heading text-4xl text-primary-foreground mb-4">Chào mừng đến với MonAmour</h1>
                <p class="text-primary-foreground/80 text-lg max-w-md">
                    Nơi tình yêu được nuôi dưỡng và thăng hoa qua những trải nghiệm đáng nhớ
                </p>
            </div>
        </div>

        Right side - Auth form
        <div class="flex-1 flex flex-col justify-center px-6 py-12 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                Mobile logo
                <div class="lg:hidden text-center mb-8">
                    <a href="/" class="inline-block">
                        <img src="/images/MonAmour-logo.png" alt="MonAmour" width="120" height="96" />
                    </a>
                </div>

                <div class="text-center mb-8">
                    <h2 class="font-heading text-3xl text-foreground">@ViewData["Title"]</h2>
                    @if (ViewData["Subtitle"] != null)
                    {
                        <p class="mt-2 text-muted-foreground">@ViewData["Subtitle"]</p>
                    }
                </div>

                <div class="bg-white shadow-lg rounded-lg px-6 py-8 border border-border">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (input.type === 'password') {
                input.type = 'text';
                icon.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"/>';
            } else {
                input.type = 'password';
                icon.innerHTML = '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>';
            }
        }
    </script>
</body>
</html>
