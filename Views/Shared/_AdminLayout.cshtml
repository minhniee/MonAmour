<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonAmour Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Admin Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-dashboard">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-infinity text-primary"></i>
                    <span class="logo-text">MonAmour</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <div class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                </div>

                <div class="menu-section">
                    <h6 class="menu-title">QUẢN LÝ HỆ THỐNG</h6>
                    
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                        <a href="@Url.Action("Users", "Admin")">
                            <i class="fas fa-users"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </div>

                    <div class="menu-item">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#conceptSubmenu">
                            <i class="fas fa-images"></i>
                            <span>Quản lý Concepts</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="conceptSubmenu">
                            <div class="submenu">
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Danh sách Concepts</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Thêm Concept mới</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Phân loại</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Product") == true ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#productSubmenu">
                            <i class="fas fa-shopping-bag"></i>
                            <span>Quản lý sản phẩm</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Product") == true ? "show" : "")" id="productSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Products", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách sản phẩm</span>
                                </a>
                                <a href="@Url.Action("ProductCategories", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProductCategories" ? "active" : "")">
                                    <i class="fas fa-tags"></i>
                                    <span>Quản lý danh mục</span>
                                </a>
                                <a href="@Url.Action("ProductImages", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProductImages" ? "active" : "")">
                                    <i class="fas fa-images"></i>
                                    <span>Quản lý hình ảnh</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Partner") == true ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#partnerSubmenu">
                            <i class="fas fa-handshake"></i>
                            <span>Quản lý đối tác</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Partner") == true ? "show" : "")" id="partnerSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Partners", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Partners" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách đối tác</span>
                                </a>
                                <a href="@Url.Action("CreatePartner", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreatePartner" ? "active" : "")">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm đối tác</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Location") == true ? "active" : "")">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#locationSubmenu">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Quản lý địa điểm</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Location") == true ? "show" : "")" id="locationSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Locations", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Locations" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách địa điểm</span>
                                </a>
                                <a href="@Url.Action("CreateLocation", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateLocation" ? "active" : "")">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm địa điểm</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#orderSubmenu">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Quản lý đơn hàng</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="orderSubmenu">
                            <div class="submenu">
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Tất cả đơn hàng</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Đơn hàng mới</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Đã xử lý</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item">
                        <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#bookingSubmenu">
                            <i class="fas fa-calendar-check"></i>
                            <span>Quản lý Booking</span>
                            <i class="fas fa-chevron-down ms-auto"></i>
                        </a>
                        <div class="collapse" id="bookingSubmenu">
                            <div class="submenu">
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Tất cả booking</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Booking mới</span>
                                </a>
                                <a href="#" class="submenu-item">
                                    <i class="fas fa-circle"></i>
                                    <span>Đã xác nhận</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="menu-section">
                    <h6 class="menu-title">BÁO CÁO & THỐNG KÊ</h6>
                    
                    <div class="menu-item">
                        <a href="#">
                            <i class="fas fa-chart-line"></i>
                            <span>Báo cáo doanh thu</span>
                        </a>
                    </div>

                    <div class="menu-item">
                        <a href="#">
                            <i class="fas fa-chart-bar"></i>
                            <span>Thống kê người dùng</span>
                        </a>
                    </div>

                    <div class="menu-item">
                        <a href="#">
                            <i class="fas fa-chart-pie"></i>
                            <span>Phân tích dữ liệu</span>
                        </a>
                    </div>
                </div>

                <div class="menu-section">
                    <h6 class="menu-title">CÀI ĐẶT</h6>
                    
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active" : "")">
                        <a href="@Url.Action("Settings", "Admin")">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt hệ thống</span>
                        </a>
                    </div>

                    <div class="menu-item">
                        <a href="#">
                            <i class="fas fa-envelope"></i>
                            <span>Email templates</span>
                        </a>
                    </div>

                    <div class="menu-item">
                        <a href="#">
                            <i class="fas fa-bell"></i>
                            <span>Thông báo</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation Bar -->
            <header class="top-nav">
                <div class="nav-left">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search..." class="search-input">
                    </div>
                </div>
                
                <div class="nav-right">
                    <div class="nav-item">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="nav-item">
                        <i class="fas fa-bell"></i>
                        <span class="badge">4</span>
                    </div>
                    <div class="nav-item">
                        <i class="fas fa-user"></i>
                    </div>
 
                     <div class="user-profile dropdown">
                        <div class="d-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false">
                            @if (!string.IsNullOrEmpty(ViewBag.UserAvatar))
                            {
                                <img src="@ViewBag.UserAvatar" alt="Profile" class="profile-img">
                            }
                            else
                            {
                                <div class="profile-img-placeholder">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            <span class="user-name">Hi, @ViewBag.UserName</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Settings", "Admin")">
                                <i class="fas fa-cog me-2"></i>Settings
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="@Url.Action("Logout", "Auth")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item" style="border: none; background: none; width: 100%; text-align: left; padding: 0.75rem 1rem;">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>

            <!-- Floating Settings Button -->
            <div class="floating-settings">
                <i class="fas fa-cog"></i>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Admin Custom JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
