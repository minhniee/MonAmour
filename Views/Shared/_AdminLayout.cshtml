<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mon Amour Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Admin Custom CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-dashboard">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-infinity text-primary"></i>
                    <span class="logo-text">Mon Amour</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <div class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                </div>

                <div class="menu-section">
                    <h6 class="menu-title">QUẢN LÝ HỆ THỐNG</h6>
                    
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                        <a href="@Url.Action("Users", "Admin")">
                            <i class="fas fa-users"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </div>


                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Product") == true ? "active" : "")">
                        <a href="@Url.Action("Products", "Admin")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#productSubmenu">
                            <i class="fas fa-shopping-bag"></i>
                            <span>Quản lý sản phẩm</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Product") == true ? "show" : "")" id="productSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Products", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách sản phẩm</span>
                                </a>
                                <a href="@Url.Action("ProductCategories", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProductCategories" ? "active" : "")">
                                    <i class="fas fa-tags"></i>
                                    <span>Quản lý danh mục</span>
                                </a>
                                <a href="@Url.Action("ProductImages", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProductImages" ? "active" : "")">
                                    <i class="fas fa-images"></i>
                                    <span>Quản lý hình ảnh</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Partner") == true ? "active" : "")">
                        <a href="@Url.Action("Partners", "Admin")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#partnerSubmenu">
                            <i class="fas fa-handshake"></i>
                            <span>Quản lý đối tác</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Partner") == true ? "show" : "")" id="partnerSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Partners", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Partners" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách đối tác</span>
                                </a>
                                <a href="@Url.Action("CreatePartner", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreatePartner" ? "active" : "")">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm đối tác</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Location") == true ? "active" : "")">
                        <a href="@Url.Action("Locations", "Admin")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#locationSubmenu">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Quản lý địa điểm</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Location") == true ? "show" : "")" id="locationSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Locations", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Locations" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách địa điểm</span>
                                </a>
                                <a href="@Url.Action("CreateLocation", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateLocation" ? "active" : "")">
                                    <i class="fas fa-plus"></i>
                                    <span>Thêm địa điểm</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Concept") == true ? "active" : "")">
                        <a href="@Url.Action("Concepts", "Admin")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#conceptSubmenu">
                            <i class="fas fa-lightbulb"></i>
                            <span>Quản lý Concept</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Action"]?.ToString()?.Contains("Concept") == true ? "show" : "")" id="conceptSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Concepts", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Concepts" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách concept</span>
                                </a>
                                <a href="@Url.Action("ConceptCategories", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ConceptCategories" ? "active" : "")">
                                    <i class="fas fa-tags"></i>
                                    <span>Danh mục concept</span>
                                </a>
                                <a href="@Url.Action("ConceptColors", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ConceptColors" ? "active" : "")">
                                    <i class="fas fa-palette"></i>
                                    <span>Màu sắc concept</span>
                                </a>
                                <a href="@Url.Action("ConceptAmbiences", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ConceptAmbiences" ? "active" : "")">
                                    <i class="fas fa-home"></i>
                                    <span>Không gian concept</span>
                                </a>
                                <a href="@Url.Action("ConceptImages", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ConceptImages" ? "active" : "")">
                                    <i class="fas fa-images"></i>
                                    <span>Hình ảnh concept</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item">
                        <a href="@Url.Action("Orders", "Admin")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#orderSubmenu">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Quản lý đơn hàng</span>
                        </a>
                        <div class="collapse" id="orderSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Orders", "Admin")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Tất cả đơn hàng</span>
                                </a>
                                <a href="@Url.Action("Orders", "Admin", new { status = "confirmed" })" class="submenu-item">
                                    <i class="fas fa-clock"></i>
                                    <span>Đơn hàng mới</span>
                                </a>
                                <a href="@Url.Action("Orders", "Admin", new { status = "shipping" })" class="submenu-item">
                                    <i class="fas fa-truck"></i>
                                    <span>Đang giao hàng</span>
                                </a>
                                <a href="@Url.Action("Orders", "Admin", new { status = "completed" })" class="submenu-item">
                                    <i class="fas fa-check-circle"></i>
                                    <span>Đã hoàn thành</span>
                                </a>
                            </div>
                        </div>
                    </div>


                    <div class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BlogManagement" ? "active" : "")">
                        <a href="@Url.Action("Blogs", "BlogManagement")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#blogSubmenu">
                            <i class="fas fa-blog"></i>
                            <span>Quản lý Blog</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BlogManagement" ? "show" : "")" id="blogSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("Blogs", "BlogManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Blogs" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    <span>Danh sách bài viết</span>
                                </a>
                                <a href="@Url.Action("CreateBlog", "BlogManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateBlog" ? "active" : "")">
                                    <i class="fas fa-plus"></i>
                                    <span>Tạo bài viết mới</span>
                                </a>
                                <a href="@Url.Action("BlogCategories", "BlogManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "BlogCategories" ? "active" : "")">
                                    <i class="fas fa-tags"></i>
                                    <span>Danh mục blog</span>
                                </a>
                                <a href="@Url.Action("BlogComments", "BlogManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "BlogComments" ? "active" : "")">
                                    <i class="fas fa-comments"></i>
                                    <span>Bình luận blog</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BannerManagement" ? "active" : "")">
                        <a href="@Url.Action("BannerHomepages", "BannerManagement")" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#bannerSubmenu">
                            <i class="fas fa-images"></i>
                            <span>Quản lý Banner</span>
                        </a>
                        <div class="collapse @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BannerManagement" ? "show" : "")" id="bannerSubmenu">
                            <div class="submenu">
                                <a href="@Url.Action("BannerHomepages", "BannerManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "BannerHomepages" ? "active" : "")">
                                    <i class="fas fa-home"></i>
                                    <span>Banner trang chủ</span>
                                </a>
                                <a href="@Url.Action("BannerServices", "BannerManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "BannerServices" ? "active" : "")">
                                    <i class="fas fa-cogs"></i>
                                    <span>Banner dịch vụ</span>
                                </a>
                                <a href="@Url.Action("BannerProducts", "BannerManagement")" class="submenu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "BannerProducts" ? "active" : "")">
                                    <i class="fas fa-shopping-bag"></i>
                                    <span>Banner sản phẩm</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="menu-section">
                    <h6 class="menu-title">BÁO CÁO & THỐNG KÊ</h6>
                    
                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "RevenueReport" ? "active" : "")">
                        <a href="@Url.Action("RevenueReport", "Report")">
                            <i class="fas fa-chart-line"></i>
                            <span>Báo cáo doanh thu</span>
                        </a>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "UserStatistics" ? "active" : "")">
                        <a href="@Url.Action("UserStatistics", "Report")">
                            <i class="fas fa-chart-bar"></i>
                            <span>Thống kê người dùng</span>
                        </a>
                    </div>

                    <div class="menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "DataAnalysis" ? "active" : "")">
                        <a href="@Url.Action("DataAnalysis", "Report")">
                            <i class="fas fa-chart-pie"></i>
                            <span>Phân tích dữ liệu</span>
                        </a>
                    </div>

                </div>

            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation Bar -->
            <header class="top-nav">

                <div class="nav-right">

                     <div class="user-profile dropdown">
                        <div class="d-flex align-items-center" data-bs-toggle="dropdown" aria-expanded="false">
                            @if (!string.IsNullOrEmpty(ViewBag.UserAvatar))
                            {
                                <img src="@ViewBag.UserAvatar" alt="Profile" class="profile-img">
                            }
                            else
                            {
                                <div class="profile-img-placeholder">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            <span class="user-name">Hi, @ViewBag.UserName</span>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="@Url.Action("Logout", "Auth")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item" style="border: none; background: none; width: 100%; text-align: left; padding: 0.75rem 1rem;">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>

            <!-- Floating Settings Button -->
            <div class="floating-settings">
                <i class="fas fa-cog"></i>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Admin Custom JS -->
    <script src="~/js/admin.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
