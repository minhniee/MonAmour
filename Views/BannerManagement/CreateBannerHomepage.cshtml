@model MonAmour.ViewModels.BannerHomepageCreateViewModel
@{
    ViewData["Title"] = "Tạo Banner Trang chủ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Tạo Banner Trang chủ Mới
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateBannerHomepage" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">Hình ảnh Banner <span class="text-danger">*</span></label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <div class="form-text">Chọn file hình ảnh từ máy tính (JPG, PNG, GIF, WebP - tối đa 5MB)</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô tả</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả cho banner"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <div class="form-text">Mô tả ngắn gọn về banner này</div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                            <input asp-for="DisplayOrder" type="number" class="form-control" min="0" value="0" />
                                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                            <div class="form-text">Số càng nhỏ càng hiển thị trước</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input asp-for="IsPrimary" class="form-check-input" type="checkbox" />
                                                <label asp-for="IsPrimary" class="form-check-label">
                                                    Banner chính
                                                </label>
                                            </div>
                                            <div class="form-text">Chỉ có 1 banner chính được hiển thị nổi bật</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Kích hoạt banner
                                        </label>
                                    </div>
                                    <div class="form-text">Banner sẽ được hiển thị khi được kích hoạt</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title mb-0">Preview Banner</h6>
                                    </div>
                                    <div class="card-body p-0">
                                        <div id="bannerPreview" class="banner-preview-container position-relative">
                                            <!-- Hero Banner Preview -->
                                            <div class="preview-section mb-3">
                                                <div class="preview-label bg-dark text-white p-2">
                                                    <i class="fas fa-desktop me-1"></i> Hero Banner Preview
                                                </div>
                                                <div class="preview-frame bg-black" style="aspect-ratio: 16/9; position: relative;">
                                                    <div class="position-absolute inset-0 d-flex align-items-center justify-content-center">
                                                        <img id="previewImageHero" src="" alt="Hero Preview" 
                                                             style="display: none; width: 100%; height: 100%; object-fit: contain;" />
                                                        <div id="noPreviewHero" class="d-flex align-items-center justify-content-center h-100 w-100 bg-light">
                                                            <div class="text-muted text-center">
                                                                <i class="fas fa-image fa-2x mb-2"></i>
                                                                <p class="small mb-0">Hero Banner Preview</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Mobile Preview -->
                                            <div class="preview-section">
                                                <div class="preview-label bg-dark text-white p-2">
                                                    <i class="fas fa-mobile-alt me-1"></i> Mobile Preview
                                                </div>
                                                <div class="preview-frame bg-black" style="aspect-ratio: 9/16; max-width: 250px; margin: 0 auto; position: relative;">
                                                    <div class="position-absolute inset-0 d-flex align-items-center justify-content-center">
                                                        <img id="previewImageMobile" src="" alt="Mobile Preview" 
                                                             style="display: none; width: 100%; height: 100%; object-fit: contain;" />
                                                        <div id="noPreviewMobile" class="d-flex align-items-center justify-content-center h-100 w-100 bg-light">
                                                            <div class="text-muted text-center">
                                                                <i class="fas fa-mobile-alt fa-2x mb-2"></i>
                                                                <p class="small mb-0">Mobile Preview</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Image Info -->
                                            <div id="imageInfo" class="mt-3 px-3 pb-3" style="display: none;">
                                                <div class="alert alert-info mb-0">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <i class="fas fa-info-circle me-2"></i>
                                                        <strong>Thông tin ảnh:</strong>
                                                    </div>
                                                    <div class="small">
                                                        <div>Kích thước: <span id="imageDimensions">-</span></div>
                                                        <div>Dung lượng: <span id="imageSize">-</span></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-footer bg-light p-3">
                                        <div class="form-text text-muted small">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Kích thước đề xuất: 1920x1080px (16:9)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("BannerHomepages", "BannerManagement")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Tạo Banner
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Preview banner image
            $('#ImageFile').on('change', function() {
                var file = this.files[0];
                if (file) {
                    // Show image info
                    $('#imageInfo').show();
                    $('#imageDimensions').text('Đang tải...');
                    $('#imageSize').text(formatFileSize(file.size));

                    var reader = new FileReader();
                    reader.onload = function(e) {
                        // Create temporary image to get dimensions
                        var img = new Image();
                        img.onload = function() {
                            $('#imageDimensions').text(this.width + ' x ' + this.height + 'px');
                            
                            // Check aspect ratio
                            var ratio = this.width / this.height;
                            if (Math.abs(ratio - 16/9) > 0.1) { // Allow small deviation
                                $('#imageInfo .alert')
                                    .removeClass('alert-info')
                                    .addClass('alert-warning')
                                    .append('<div class="small mt-2 text-warning">' +
                                        '<i class="fas fa-exclamation-triangle me-1"></i> ' +
                                        'Tỷ lệ ảnh không phải 16:9, có thể bị cắt khi hiển thị</div>');
                            }
                        };
                        img.src = e.target.result;

                        // Update both previews
                        $('#previewImageHero, #previewImageMobile').attr('src', e.target.result).show();
                        $('#noPreviewHero, #noPreviewMobile').hide();
                    };
                    reader.readAsDataURL(file);
                } else {
                    $('#previewImageHero, #previewImageMobile').hide();
                    $('#noPreviewHero, #noPreviewMobile').show();
                    $('#imageInfo').hide();
                }
            });

            // Form validation
            $('form').on('submit', function(e) {
                var imageFile = $('#ImageFile')[0].files[0];
                if (!imageFile) {
                    e.preventDefault();
                    alert('Vui lòng chọn hình ảnh banner');
                    return false;
                }
                
                // Check file size (5MB)
                if (imageFile.size > 5 * 1024 * 1024) {
                    e.preventDefault();
                    alert('Kích thước file không được vượt quá 5MB');
                    return false;
                }
            });
        });

        // Helper function to format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
    </script>
}
