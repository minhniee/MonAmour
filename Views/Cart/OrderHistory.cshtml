@model List<MonAmour.Models.Order>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="min-h-screen bg-background">

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-muted rounded-full flex items-center justify-center mb-4">
                    <svg class="w-12 h-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
                <h3 class="font-heading text-xl text-foreground mb-2">Chưa có đơn hàng nào</h3>
                <p class="text-muted-foreground mb-6">Bạn chưa có đơn hàng nào trong lịch sử mua hàng.</p>
                <a href="/Gift_box/ListGiftbox" class="bg-primary text-primary-foreground px-6 py-3 rounded-md hover:bg-primary/90 transition-colors">
                    Bắt đầu mua sắm
                </a>
            </div>
        }
        else
        {
            <!-- Orders List -->
            <div class="space-y-6">
                @foreach (var order in Model)
                {
                    <div class="bg-white rounded-lg shadow-sm border border-border overflow-hidden">
                        <!-- Order Header -->
                        <div class="px-6 py-4 border-b border-border bg-muted/30">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="font-heading text-lg text-foreground">Đơn hàng #@order.OrderId</h3>
                                    <p class="text-sm text-muted-foreground">
                                        Ngày đặt: @(order.CreatedAt.HasValue ? order.CreatedAt.Value.ToString("dd/MM/yyyy") : "Chưa có")

                                    </p>
                                </div>
                                <div class="text-right">
                                    <div class="text-lg font-semibold text-foreground">
                                        @(order.TotalPrice)₫
                                    </div>
                                    @{
                                        // Determine visual status: treat orders with pending payment as "Chờ xác minh"
                                        bool hasPendingPayment = order.PaymentDetails != null && order.PaymentDetails.Any(pd => pd.Payment != null && pd.Payment.Status == "pending");
                                        string badgeClass, badgeText;
                                        
                                        if (hasPendingPayment)
                                        {
                                            badgeClass = "bg-yellow-100 text-yellow-800";
                                            badgeText = "Chờ xác minh";
                                        }
                                        else if (order.Status == "confirmed")
                                        {
                                            badgeClass = "bg-green-100 text-green-800";
                                            badgeText = "Đã xác nhận";
                                        }
                                        else if (order.Status == "cancelled")
                                        {
                                            badgeClass = "bg-red-100 text-red-800";
                                            badgeText = "Đã hủy";
                                        }
                                        else
                                        {
                                            badgeClass = "bg-gray-100 text-gray-800";
                                            badgeText = order.Status;
                                        }
                                    }
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @badgeClass">
                                        @badgeText
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="px-6 py-4">
                            <div class="space-y-4">
                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="flex items-center space-x-4">
                                        <a href="@Url.Action("BillDetail","Cart", new { orderId = order.OrderId })" class="flex items-center space-x-4 flex-1">
                                        @if (item.Product?.ProductImgs?.Any() == true)
                                        {
                                            <img src="@item.Product.ProductImgs.First().ImgUrl" 
                                                 alt="@item.Product.Name" 
                                                 class="w-16 h-16 object-cover rounded-md">
                                        }
                                        else
                                        {
                                            <div class="w-16 h-16 bg-muted rounded-md flex items-center justify-center">
                                                <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                        }
                                            <div class="flex-1">
                                            <h4 class="font-medium text-foreground">@item.Product?.Name</h4>
                                            <p class="text-sm text-muted-foreground">
                                                Số lượng: @item.Quantity
                                            </p>
                                            </div>
                                            <div class="text-right">
                                                <div class="font-medium text-foreground">
                                                    @(item.TotalPrice)₫
                                                </div>
                                                <div class="text-sm text-muted-foreground">
                                                    @(item.UnitPrice)₫ × @item.Quantity
                                                </div>
                                            </div>
                                        </a>
                                        @{
                                            var reviewedIds = ViewBag.ReviewedProductIds as List<int> ?? new List<int>();
                                            bool canReview = string.Equals(order.Status, "completed", StringComparison.OrdinalIgnoreCase)
                                                             && order.DeliveredAt.HasValue
                                                             && item.ProductId != null;
                                            bool isReviewed = item.ProductId != null && reviewedIds.Contains(item.ProductId.Value);
                                        }
                                        @if (canReview)
                                        {
                                            if (isReviewed)
                                            {
                                                <button type="button"
                                                        class="px-3 py-1 rounded ml-2 cursor-not-allowed bg-gray-300 text-gray-600"
                                                        disabled>
                                                    Đã đánh giá
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button"
                                                        class="px-3 py-1 text-white rounded ml-2"
                                                        style="background-color: #62000d;"
                                                        data-review-button
                                                        data-product-id="@item.ProductId"
                                                        data-product-name="@(item.Product?.Name ?? ($"Sản phẩm #" + item.ProductId))">
                                                    Đánh giá
                                                </button>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Order Footer -->
                        <div class="px-6 py-4 border-t border-border bg-muted/10">
                            <div class="flex justify-between items-center">
                                <div class="text-sm text-muted-foreground">
                                    @if (!string.IsNullOrEmpty(order.ShippingAddress))
                                    {
                                        <span>Địa chỉ giao hàng: @order.ShippingAddress</span>
                                    }
                                </div>
                                <div class="text-lg font-semibold text-foreground">
                                    Tổng cộng: @(order.TotalPrice)₫
                                </div>
                            </div>
                        </div>
                    </div>
                }
             
            </div>
        }
    </div>
</div>

@{
    var antiForgery = Html.AntiForgeryToken();
}

<div id="reviewModal" class="fixed inset-0 hidden items-center justify-center z-50">
    <div class="absolute inset-0 bg-black/50" data-modal-overlay></div>
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md mx-4 relative">
        <div class="px-6 py-4 border-b flex items-center justify-between">
            <h3 class="text-lg font-semibold">Đánh giá sản phẩm</h3>
            <button type="button" class="text-gray-500 hover:text-gray-700" data-modal-close>&times;</button>
        </div>
        <form id="reviewForm" class="px-6 py-4">
            @antiForgery
            <input type="hidden" name="targetId" id="reviewTargetId" />
            <input type="hidden" name="targetType" value="Product" />
            <div class="mb-3">
                <label class="block text-sm mb-1">Sản phẩm</label>
                <input type="text" id="reviewProductName" class="w-full p-2 border rounded" readonly />
            </div>
            <div class="mb-3">
                <label class="block text-sm mb-1">Đánh giá</label>
                <select name="rating" id="reviewRating" class="w-full p-2 border rounded" required>
                    <option value="">Chọn</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-sm mb-1">Nhận xét</label>
                <input type="text" name="comment" id="reviewComment" class="w-full p-2 border rounded" placeholder="Tùy chọn" />
            </div>
            <div class="mb-4">
                <label class="block text-sm mb-1">Ảnh đánh giá (tùy chọn)</label>
                <input type="file" name="imageFile" id="reviewImageFile" accept="image/*" class="w-full p-2 border rounded" />
                <p class="text-xs text-gray-500 mt-1">Chọn ảnh để chia sẻ trải nghiệm của bạn</p>
                <div id="reviewImagePreview" class="mt-2 hidden">
                    <img id="reviewImagePreviewImg" src="" alt="Preview" class="max-w-xs rounded-lg border border-gray-300" />
                    <button type="button" id="reviewImageRemove" class="mt-2 text-sm text-red-600 hover:text-red-800">Xóa ảnh</button>
                </div>
            </div>
            <div class="flex justify-end gap-2 pb-4">
                <button type="button" class="px-4 py-2 border rounded" data-modal-close>Hủy</button>
                <button type="submit" class="px-4 py-2 text-white rounded" style="background-color: #62000d;">Gửi đánh giá</button>
            </div>
            <div id="reviewMessage" class="text-sm mt-2"></div>
        </form>
    </div>
    <style>
        #reviewModal.hidden { display: none; }
        #reviewModal:not(.hidden) { display: flex; }
    </style>
    <script>
        (function(){
            const modal = document.getElementById('reviewModal');
            const form = document.getElementById('reviewForm');
            const targetIdInput = document.getElementById('reviewTargetId');
            const productNameInput = document.getElementById('reviewProductName');
            const messageBox = document.getElementById('reviewMessage');
            const overlay = modal.querySelector('[data-modal-overlay]');
            const closeButtons = modal.querySelectorAll('[data-modal-close]');

            function openModal(productId, productName){
                targetIdInput.value = productId;
                productNameInput.value = productName;
                messageBox.textContent = '';
                messageBox.className = 'text-sm mt-2';
                modal.classList.remove('hidden');
            }
            function closeModal(){
                modal.classList.add('hidden');
                form.reset();
                document.getElementById('reviewImagePreview').classList.add('hidden');
                document.getElementById('reviewImagePreviewImg').src = '';
            }

            // Image preview functionality
            const imageFileInput = document.getElementById('reviewImageFile');
            const imagePreview = document.getElementById('reviewImagePreview');
            const imagePreviewImg = document.getElementById('reviewImagePreviewImg');
            const imageRemoveBtn = document.getElementById('reviewImageRemove');

            if (imageFileInput) {
                imageFileInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            imagePreviewImg.src = e.target.result;
                            imagePreview.classList.remove('hidden');
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            if (imageRemoveBtn) {
                imageRemoveBtn.addEventListener('click', function() {
                    imageFileInput.value = '';
                    imagePreview.classList.add('hidden');
                    imagePreviewImg.src = '';
                });
            }

            document.addEventListener('click', function(e){
                const btn = e.target.closest('[data-review-button]');
                if(btn){
                    const productId = btn.getAttribute('data-product-id');
                    const productName = btn.getAttribute('data-product-name');
                    openModal(productId, productName);
                }
            });
            overlay.addEventListener('click', closeModal);
            closeButtons.forEach(b => b.addEventListener('click', closeModal));

            form.addEventListener('submit', async function(e){
                e.preventDefault();
                const formData = new FormData(form);
                const tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';
                try{
                    const res = await fetch('@Url.Action("SubmitReview","Cart")', {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest', 'RequestVerificationToken': token },
                        body: formData
                    });
                    const data = await res.json();
                    if(data.success){
                        messageBox.textContent = data.message || 'Đã gửi đánh giá';
                        messageBox.className = 'text-sm mt-2 text-green-600';
                        setTimeout(() => { closeModal(); window.location.reload(); }, 800);
                    } else {
                        messageBox.textContent = data.message || 'Gửi đánh giá thất bại';
                        messageBox.className = 'text-sm mt-2 text-red-600';
                    }
                } catch(err){
                    messageBox.textContent = 'Có lỗi xảy ra. Vui lòng thử lại.';
                    messageBox.className = 'text-sm mt-2 text-red-600';
                }
            });
        })();
    </script>
</div>
