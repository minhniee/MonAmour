@using Microsoft.Extensions.Options
@using MonAmour.Util
@model List<MonAmour.Models.Order>
@inject IOptions<AppSettings> AppSettings
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="min-h-screen bg-background">

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-2xl md:text-3xl font-semibold text-foreground mb-6">Lịch sử đơn hàng</h1>
        @if (Model == null || !Model.Any())
        {
            <!-- Empty State -->
            <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-muted rounded-full flex items-center justify-center mb-4">
                    <svg class="w-12 h-12 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                </div>
                <h3 class="font-heading text-xl text-foreground mb-2">Chưa có đơn hàng nào</h3>
                <p class="text-muted-foreground mb-6">Bạn chưa có đơn hàng nào trong lịch sử mua hàng.</p>
                <a href="/Gift_box/ListGiftbox" class="bg-primary text-primary-foreground px-6 py-3 rounded-md hover:bg-primary/90 transition-colors">
                    Bắt đầu mua sắm
                </a>
            </div>
        }
        else
        {
            <!-- Orders List -->
            <div id="order-list" class="space-y-6">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var order = Model[i];
                    <div class="bg-white rounded-lg shadow-sm border border-border overflow-hidden" data-order-card data-index="@i" @(i >= 6 ? "style=\"display:none\"" : "")>
                        <!-- Order Header -->
                        <div class="px-6 py-4 border-b border-border bg-muted/30">
                            <div class="flex justify-between items-start">
	                            <div>
                                    <a href="@AppSettings.Value.AppUrl/Cart/BillDetail?orderId=@order.OrderId">

                                        <h3 class="font-heading text-lg text-foreground">Đơn hàng #@order.OrderId</h3>
                                    </a>
		                            <p class="text-sm text-muted-foreground">
			                            Ngày đặt: @(order.CreatedAt.HasValue ? order.CreatedAt.Value.ToString("dd/MM/yyyy") : "Chưa có")

		                            </p>
	                            </div>
                                <div class="text-right">
                                    <div class="text-lg font-semibold text-foreground">@String.Format("{0:#,##0}₫", order.TotalPrice)</div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        @(order.Status == "confirmed" ? "bg-green-100 text-green-800" :
                                          order.Status == "pending" ? "bg-yellow-100 text-yellow-800" :
                                          order.Status == "cancelled" ? "bg-red-100 text-red-800" :
                                          "bg-gray-100 text-gray-800")">
                                        @switch (order.Status)
                                        {
                                            case "confirmed":
                                                <text>Đã xác nhận</text>
                                                break;
                                            case "pending":
                                                <text>Đang chờ</text>
                                                break;
                                            case "cancelled":
                                                <text>Đã hủy</text>
                                                break;
                                            case "shipped":
                                                <text>Đã giao</text>
                                                break;
                                            case "completed":
                                                <text>Đã nhận</text>
                                                break;
                                            default:
                                                <text>@order.Status</text>
                                                break;
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Order Items -->
                        <div class="px-6 py-4">
                            <div class="space-y-4">
                                @foreach (var item in order.OrderItems)
                                {
                                    <div class="flex items-center space-x-4">
                                        @if (item.Product?.ProductImgs?.Any() == true)
                                        {
                                            <img src="@item.Product.ProductImgs.First().ImgUrl" 
                                                 alt="@item.Product.Name" 
                                                 class="w-16 h-16 object-cover rounded-md">
                                        }
                                        else
                                        {
                                            <div class="w-16 h-16 bg-muted rounded-md flex items-center justify-center">
                                                <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                        }
                                        <div class="flex-1">
                                            <h4 class="font-medium text-foreground">@item.Product?.Name</h4>
                                            <p class="text-sm text-muted-foreground">
                                                Số lượng: @item.Quantity
                                            </p>
                                        </div>
                                        <div class="text-right">
                                            <div class="font-medium text-foreground">@String.Format("{0:#,##0}₫", item.TotalPrice)</div>
                                            <div class="text-sm text-muted-foreground">@String.Format("{0:#,##0}₫", item.UnitPrice) × @item.Quantity</div>
                                        </div>
                                    </div>

                                    @if ((order.Status ?? string.Empty).ToLowerInvariant() == "completed")
                                    {
                                        var modalId = $"reviewModal-{order.OrderId}-{item.OrderItemId}";
                                        <div class="mt-2 flex justify-end">
                                            <button type="button" class="px-4 py-2 bg-primary text-primary-foreground rounded text-sm" onclick="document.getElementById('@modalId').classList.remove('hidden')">Đánh giá sản phẩm</button>
                                        </div>

                                        <div id="@modalId" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
                                            <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6">
                                                <h3 class="text-lg font-semibold mb-4">Đánh giá sản phẩm</h3>
                                                <form asp-action="SubmitReview" asp-controller="Cart" method="post" class="space-y-3">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="targetType" value="Product" />
                                                    <input type="hidden" name="targetId" value="@item.ProductId" />
                                                    <div class="flex items-center gap-2">
                                                        <label class="text-sm">Đánh giá:</label>
                                                        <select name="rating" class="border border-border rounded px-2 py-1 text-sm" required>
                                                            <option value="">Chọn</option>
                                                            <option value="1">1 ⭐</option>
                                                            <option value="2">2 ⭐⭐</option>
                                                            <option value="3">3 ⭐⭐⭐</option>
                                                            <option value="4">4 ⭐⭐⭐⭐</option>
                                                            <option value="5">5 ⭐⭐⭐⭐⭐</option>
                                                        </select>
                                                    </div>
                                                    <div>
                                                        <textarea name="comment" rows="3" class="w-full border border-border rounded px-3 py-2 text-sm" placeholder="Viết cảm nhận của bạn (không bắt buộc)"></textarea>
                                                    </div>
                                                    <div class="flex justify-end gap-2">
                                                        <button type="button" class="px-4 py-2 border rounded text-sm" onclick="document.getElementById('@modalId').classList.add('hidden')">Hủy</button>
                                                        <button type="submit" class="px-4 py-2 bg-primary text-primary-foreground rounded text-sm">Gửi</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <!-- Order Footer -->
                        <div class="px-6 py-4 border-t border-border bg-muted/10">
                            <div class="flex justify-between items-center">
                                <div class="text-sm text-muted-foreground">
                                    @if (!string.IsNullOrEmpty(order.ShippingAddress))
                                    {
                                        <span>Địa chỉ giao hàng: @order.ShippingAddress</span>
                                    }
                                </div>
                                <div class="text-lg font-semibold text-foreground">Tổng cộng: @String.Format("{0:#,##0}₫", order.TotalPrice)</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div id="orders-loadmore-wrap" class="text-center mt-8 @(Model.Count > 6 ? "" : "hidden")">
                <button id="orders-loadmore" class="bg-muted text-foreground px-6 py-2 rounded hover:bg-muted/80">Xem thêm</button>
            </div>
        }
    </div>
</div>

<script>
    // Load more orders (progressive reveal)
    (function(){
        const list = document.getElementById('order-list');
        const btn = document.getElementById('orders-loadmore');
        if (!list || !btn) return;
        btn.addEventListener('click', function(){
            const hidden = Array.from(list.querySelectorAll('[data-order-card][style*="display:none"], [data-order-card].hidden'));
            hidden.slice(0, 6).forEach(el => {
                el.style.display = '';
                el.classList.remove('hidden');
            });
            if (Array.from(list.querySelectorAll('[data-order-card][style*="display:none"], [data-order-card].hidden')).length === 0) {
                btn.parentElement.classList.add('hidden');
            }
        });
    })();
</script>
