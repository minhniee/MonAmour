                    credentials: 'same-origin' 
                });
                const data = await res.json();
                
                if (data.success) {
                    const toast = document.createElement('div');
                    toast.textContent = data.message || 'Thanh to√°n th√†nh c√¥ng';
                    toast.className = 'fixed bottom-6 right-6 bg-wine-red text-beige px-4 py-3 rounded-lg shadow-lg';
                    toast.style.zIndex = '9999';
                    toast.style.fontFamily = 'Noto Serif, serif';
                    document.body.appendChild(toast);
                    setTimeout(()=>{ toast.style.transition='opacity .5s'; toast.style.opacity='0'; setTimeout(()=>toast.remove(), 500); }, 2000);
                    
                    // Redirect to bill detail page after successful payment
                    if (data.redirectUrl) {
                        setTimeout(() => { window.location.href = data.redirectUrl; }, 1500);
                    } else {
                    setTimeout(() => { window.location.reload(); }, 2000);
                    }
                } else {
                    alert(data.message || 'Ch∆∞a c√≥ giao d·ªãch n√†o ph√π h·ª£p');
                    // Ch·ªâ hi·ªÉn th·ªã n√∫t b√°o l·ªói sau khi server cho ph√©p (>=5 l·∫ßn)
                    if (data.showReport) {
                        const btn = document.getElementById('report-payment-issue-btn');
                        if (btn) btn.classList.remove('hidden');
                    }
                }
            } catch (err) {
                alert('L·ªói khi ki·ªÉm tra thanh to√°n: ' + (err && err.message ? err.message : err));
            } finally {
                cassoCheckBtn.disabled = false;
                cassoCheckBtn.textContent = 'Ki·ªÉm tra thanh to√°n';
            }
        });
    }

    // Removed "L√†m m·ªõi" button

    // Report payment issue flow
    const reportBtn = document.getElementById('report-payment-issue-btn');
    const contactModal = document.getElementById('contact-modal');
    const contactName = document.getElementById('contact-name');
    const contactPhone = document.getElementById('contact-phone');
    const contactEmail = document.getElementById('contact-email');
    const contactCancel = document.getElementById('contact-cancel');
    const contactSubmit = document.getElementById('contact-submit');
    if (reportBtn) {
        reportBtn.addEventListener('click', async function(){
            try {
                let note = currentTransferContent;
                if (!note) {
                    // Try to infer from instructions block if available
                    const inst = document.getElementById('casso-instructions');
                    if (inst) {
                        const text = inst.innerText || '';
                        const m = text.match(/N·ªôi dung chuy·ªÉn kho·∫£n:\s*(ORDER\S+)/);
                        if (m && m[1]) note = m[1];
                    }
                }
                if (!note) return alert('Kh√¥ng t√¨m th·∫•y n·ªôi dung chuy·ªÉn kho·∫£n (ORDER...) ƒë·ªÉ b√°o l·ªói. Vui l√≤ng t·∫°o VietQR tr∆∞·ªõc.');
                // M·ªü modal thu th·∫≠p th√¥ng tin li√™n h·ªá
                if (contactModal) {
                    // Prefill
                    contactPhone.value = phoneInput ? (phoneInput.value || '') : '';
                    contactEmail.value = '';
                    contactName.value = '';
                    contactModal.classList.remove('hidden');
                    contactModal.classList.add('flex');

                    const submitHandler = async () => {
                        const err = document.getElementById('contact-error');
                        if (err) err.textContent = '';
                        // Validate
                        const name = contactName.value.trim();
                        const phone = (contactPhone.value || '').replace(/[\s\-\(\)]/g,'');
                        const email = (contactEmail.value || '').trim();
                        if (!name) { if (err) err.textContent = 'Vui l√≤ng nh·∫≠p h·ªç t√™n'; return; }
                        if (!phone || phone.length !== 10 || !phone.startsWith('0')) { if (err) err.textContent = 'Vui l√≤ng nh·∫≠p s·ªë ƒëi·ªán tho·∫°i 10 s·ªë h·ª£p l·ªá theo ƒë·∫ßu s·ªë Vi·ªát Nam'; return; }
                        const validPrefixes = ['032','033','034','035','036','037','038','039','070','076','077','078','079','081','082','083','084','085','056','058','059','020','021','022','023','024','025','026','027','028','029','030','031','040','041','042','043','044','045','046','047','048','049','050','051','052','053','054','055','057','060','061','062','063','064','065','066','067','068','069','090','091','092','093','094','095','096','097','098','099','086','087','088','089'];
                        if (!validPrefixes.includes(phone.substring(0,3))) { if (err) err.textContent = 'S·ªë ƒëi·ªán tho·∫°i kh√¥ng thu·ªôc ƒë·∫ßu s·ªë Vi·ªát Nam'; return; }
                        if (email) {
                            const re = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                            if (!re.test(email)) { if (err) err.textContent = 'Email kh√¥ng h·ª£p l·ªá'; return; }
                        }
                        const fd = new FormData();
                        fd.append('transferCode', note);
