@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Mon_Amour.Controllers.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
    ViewData["Subtitle"] = "Nhập email để nhận hướng dẫn đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@if (ViewBag.IsSubmitted == true)
{
    <div class="text-center space-y-6">
        <div class="mx-auto w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
        </div>

        <div class="space-y-2">
            <p class="text-foreground">Chúng tôi đã gửi liên kết đặt lại mật khẩu đến:</p>
            <p class="font-medium text-primary">@ViewBag.Email</p>
        </div>

        <div class="space-y-4">
            <p class="text-sm text-muted-foreground">
                Vui lòng kiểm tra hộp thư đến và làm theo hướng dẫn để đặt lại mật khẩu. Liên kết sẽ hết hạn sau 15 phút.
            </p>

            <p class="text-sm text-muted-foreground">
                Không nhận được email? Kiểm tra thư mục spam hoặc
                <a href="/Auth/ForgotPassword" class="text-primary hover:text-primary/80 font-medium underline">gửi lại</a>
            </p>
        </div>

        <div class="pt-4">
            <a href="/Auth/Login" class="w-full inline-flex justify-center items-center py-2 px-4 border border-border rounded-md shadow-sm text-sm font-medium text-foreground bg-transparent hover:bg-muted">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Quay lại đăng nhập
            </a>
        </div>
    </div>
}
else
{
    <form asp-action="ForgotPassword" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-destructive text-sm"></div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-foreground">Địa chỉ email</label>
            <input asp-for="Email" type="email" class="mt-1 block w-full px-3 py-2 border border-border rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary" placeholder="Nhập email đã đăng ký" />
            <span asp-validation-for="Email" class="mt-1 text-sm text-destructive"></span>
        </div>

        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-primary-foreground bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            Gửi hướng dẫn đặt lại
        </button>

        <div class="text-center">
            <a href="/Auth/Login" class="inline-flex items-center text-sm text-muted-foreground hover:text-foreground">
                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Quay lại đăng nhập
            </a>
        </div>
    </form>
}
